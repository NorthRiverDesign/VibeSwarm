@page "/providers"
@attribute [Authorize]
@using VibeSwarm.Shared.Services
@using VibeSwarm.Shared.Data
@inject IProviderService ProviderService

<PageHeader Title="Providers" Subtitle="Manage your AI coding agent providers" />

<div class="row g-3 g-lg-4">
    @* Form first on mobile *@
    <div class="col-12 col-lg-4 order-1 order-lg-2">
        <div class="card">
            <div class="card-header bg-body-secondary">
                <h5 class="mb-0 fw-semibold">@(EditingProvider != null ? "Edit Provider" : "Add Provider")</h5>
            </div>
            <div class="card-body">
                <ProviderForm Provider="@CurrentProvider" IsEdit="@(EditingProvider != null)"
                    OnSaved="HandleProviderSaved" OnCancel="CancelEdit" />
            </div>
        </div>
    </div>

    @* List second on mobile *@
    <div class="col-12 col-lg-8 order-2 order-lg-1">
        <div class="card">
            <div class="card-header bg-body-secondary">
                <h5 class="mb-0 fw-semibold">Connected Providers</h5>
            </div>
            <div class="card-body p-0">
                @if (IsLoading)
                {
                    <LoadingSpinner />
                }
                else if (!ProvidersList.Any())
                {
                    <div class="p-3">
                        <EmptyState Icon="cpu" Title="No providers configured"
                            Message="Add a provider to connect to AI coding agents like Claude Code CLI." />
                    </div>
                }
                else
                {
                    <div class="list-group list-group-flush">
                        @foreach (var provider in ProvidersList)
                        {
                            <div
                                class="list-group-item d-flex flex-column flex-md-row align-items-md-center gap-2 gap-md-3 p-3 hover-bg-tertiary @(provider.IsDefault ? "bg-success bg-opacity-10" : "")">
                                <div class="flex-grow-1 min-width-0">
                                    <div class="d-flex align-items-center gap-2 flex-wrap">
                                        <span class="fw-semibold">@provider.Name</span>
                                        @if (provider.IsDefault)
                                        {
                                            <span class="default-badge">Default</span>
                                        }
                                        <StatusBadge Status="@(provider.IsEnabled ? "Active" : "Off")" ShowSpinner="false" />
                                    </div>
                                    <div class="d-flex flex-wrap gap-2 gap-md-3 mt-2 small text-body-secondary">
                                        <span><span class="fw-medium">Type:</span> @provider.Type</span>
                                        <span><span class="fw-medium">Mode:</span> @provider.ConnectionMode</span>
                                    </div>
                                    @if (TestResults.TryGetValue(provider.Id, out var result))
                                    {
                                        <div class="mt-2 @(result.IsConnected ? "test-success" : "test-failure")">
                                            <strong>@(result.IsConnected ? "Connected" : "Connection Failed")</strong>
                                            @if (!result.IsConnected && !string.IsNullOrEmpty(result.ErrorMessage))
                                            {
                                                <div class="mt-1">
                                                    <pre class="mb-0 small">@result.ErrorMessage</pre>
                                                </div>
                                            }
                                        </div>
                                    }
                                    @if (ProviderModels.TryGetValue(provider.Id, out var models) && models.Any())
                                    {
                                        <div class="mt-2">
                                            <span class="fw-medium small text-body-secondary">Models:</span>
                                            <div class="d-flex flex-wrap gap-1 mt-1">
                                                @foreach (var model in models.Where(m => m.IsAvailable).Take(5))
                                                {
                                                    <span class="badge @(model.IsDefault ? "bg-primary" : "bg-secondary") bg-opacity-75"
                                                        title="@model.ModelId">
                                                        @(model.DisplayName ?? model.ModelId)
                                                    </span>
                                                }
                                                @if (models.Count(m => m.IsAvailable) > 5)
                                                {
                                                    <span class="badge bg-secondary bg-opacity-50">+@(models.Count(m => m.IsAvailable) -
                                                                                                5) more</span>
                                                }
                                            </div>
                                            @if (provider.LastModelsRefreshAt.HasValue)
                                            {
                                                <small class="text-body-tertiary d-block mt-1">
                                                    Updated @provider.LastModelsRefreshAt.Value.ToLocalTime().ToString("g")
                                                </small>
                                            }
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(RefreshModelsError))
                                    {
                                        <div class="alert alert-warning mt-2 mb-0 py-2 px-3 small">
                                            <i class="bi bi-exclamation-triangle me-1"></i>
                                            @RefreshModelsError
                                        </div>
                                    }
                                </div>
                                <div class="d-flex flex-wrap gap-2 flex-shrink-0 align-items-center">
                                    <label class="toggle-switch me-1" title="@(provider.IsEnabled ? "Disable" : "Enable")">
                                        <input type="checkbox" checked="@provider.IsEnabled"
                                            @onchange="() => ToggleEnabled(provider)" />
                                        <span class="toggle-slider"></span>
                                    </label>
                                    <ActionButton Icon="lightning" Text="Test" Outline="true"
                                        Size="ActionButton.ButtonSize.Small" HideTextOnMobile="true"
                                        IsLoading="@(TestingId == provider.Id)" OnClick="@(() => TestConnection(provider))" />
                                    <ActionButton Icon="arrow-repeat" Text="Models" Outline="true"
                                        Size="ActionButton.ButtonSize.Small" HideTextOnMobile="true"
                                        IsLoading="@(RefreshingModelsId == provider.Id)"
                                        OnClick="@(() => RefreshModels(provider))" />
                                    @if (!provider.IsDefault)
                                    {
                                        <ActionButton Icon="check2" Text="Default" Outline="true"
                                            Size="ActionButton.ButtonSize.Small" Style="ActionButton.ButtonStyle.Primary"
                                            HideTextOnMobile="true" OnClick="@(() => MakeDefault(provider))" />
                                    }
                                    <ActionButton Icon="pencil" Text="Edit" Outline="true" Size="ActionButton.ButtonSize.Small"
                                        HideTextOnMobile="true" OnClick="@(() => EditProvider(provider))" />
                                    <ActionButton Icon="trash" Text="Delete" Outline="true" Size="ActionButton.ButtonSize.Small"
                                        Style="ActionButton.ButtonStyle.Danger" HideTextOnMobile="true"
                                        OnClick="@(() => DeleteProvider(provider))" />
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private List<Provider> ProvidersList { get; set; } = new();
    private bool IsLoading { get; set; } = true;
    private Provider? EditingProvider { get; set; }
    private Provider CurrentProvider { get; set; } = new();
    private Guid? TestingId { get; set; }
    private Guid? RefreshingModelsId { get; set; }
    private string? RefreshModelsError { get; set; }
    private Dictionary<Guid, ConnectionTestResult> TestResults { get; set; } = new();
    private Dictionary<Guid, List<ProviderModel>> ProviderModels { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadProviders();
    }

    private async Task LoadProviders()
    {
        IsLoading = true;
        try
        {
            ProvidersList = (await ProviderService.GetAllAsync()).ToList();

            // Load models for each provider
            ProviderModels.Clear();
            foreach (var provider in ProvidersList)
            {
                var models = await ProviderService.GetModelsAsync(provider.Id);
                ProviderModels[provider.Id] = models.ToList();
            }
        }
        finally
        {
            IsLoading = false;
        }
    }

    private void EditProvider(Provider provider)
    {
        EditingProvider = provider;
        CurrentProvider = new Provider
        {
            Id = provider.Id,
            Name = provider.Name,
            Type = provider.Type,
            ConnectionMode = provider.ConnectionMode,
            ExecutablePath = provider.ExecutablePath,
            WorkingDirectory = provider.WorkingDirectory,
            ApiEndpoint = provider.ApiEndpoint,
            ApiKey = provider.ApiKey,
            IsEnabled = provider.IsEnabled,
            CreatedAt = provider.CreatedAt,
            LastConnectedAt = provider.LastConnectedAt
        };
    }

    private void CancelEdit()
    {
        EditingProvider = null;
        CurrentProvider = new Provider();
    }

    private async Task HandleProviderSaved()
    {
        EditingProvider = null;
        CurrentProvider = new Provider();
        await LoadProviders();
    }

    private async Task DeleteProvider(Provider provider)
    {
        await ProviderService.DeleteAsync(provider.Id);
        await LoadProviders();
    }

    private async Task ToggleEnabled(Provider provider)
    {
        try
        {
            await ProviderService.SetEnabledAsync(provider.Id, !provider.IsEnabled);
            await LoadProviders();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error toggling provider: {ex.Message}");
        }
    }

    private async Task MakeDefault(Provider provider)
    {
        try
        {
            await ProviderService.SetDefaultAsync(provider.Id);
            await LoadProviders();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error setting default provider: {ex.Message}");
        }
    }

    private async Task TestConnection(Provider provider)
    {
        TestingId = provider.Id;
        TestResults.Remove(provider.Id);
        StateHasChanged();

        try
        {
            var result = await ProviderService.TestConnectionWithDetailsAsync(provider.Id);
            TestResults[provider.Id] = result;
        }
        catch (Exception ex)
        {
            TestResults[provider.Id] = new ConnectionTestResult
            {
                IsConnected = false,
                ErrorMessage = $"Unexpected error: {ex.Message}"
            };
        }
        finally
        {
            TestingId = null;
        }
    }

    private async Task RefreshModels(Provider provider)
    {
        RefreshingModelsId = provider.Id;
        RefreshModelsError = null;
        StateHasChanged();

        try
        {
            var models = await ProviderService.RefreshModelsAsync(provider.Id);
            ProviderModels[provider.Id] = models.ToList();

            // Reload the provider to get updated LastModelsRefreshAt
            await LoadProviders();
        }
        catch (TimeoutException ex)
        {
            RefreshModelsError = ex.Message;
            Console.WriteLine($"Timeout refreshing models: {ex.Message}");
        }
        catch (Exception ex)
        {
            RefreshModelsError = $"Error refreshing models: {ex.Message}";
            Console.WriteLine($"Error refreshing models: {ex.Message}");
        }
        finally
        {
            RefreshingModelsId = null;
        }
    }
}