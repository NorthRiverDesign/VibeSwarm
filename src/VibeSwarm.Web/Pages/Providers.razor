@page "/providers"
@attribute [Authorize]
@using VibeSwarm.Shared.Services
@inject IProviderService ProviderService

<div class="page-header">
    <div>
        <h3>Providers</h3>
        <p class="text-muted mb-0 d-none d-sm-block">Manage your AI coding agent providers</p>
    </div>
</div>

<div class="row g-3 g-lg-4">
    @* Form first on mobile *@
    <div class="col-12 col-lg-4 order-1 order-lg-2">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">@(EditingProvider != null ? "Edit Provider" : "Add Provider")</h5>
            </div>
            <div class="card-body">
                <ProviderForm Provider="@CurrentProvider" IsEdit="@(EditingProvider != null)"
                    OnSaved="HandleProviderSaved" OnCancel="CancelEdit" />
            </div>
        </div>
    </div>

    @* List second on mobile *@
    <div class="col-12 col-lg-8 order-2 order-lg-1">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Connected Providers</h5>
            </div>
            <div class="card-body p-0 p-sm-3">
                @if (IsLoading)
                {
                    <div class="d-flex justify-content-center py-4">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                }
                else if (!ProvidersList.Any())
                {
                    <div class="empty-state m-3">
                        <p class="mb-0">No providers configured. Add one using the form.</p>
                    </div>
                }
                else
                {
                    @* Mobile: Card layout *@
                    <div class="d-lg-none">
                        @foreach (var provider in ProvidersList)
                        {
                            <div class="p-3 border-bottom @(provider.IsDefault ? "default-provider-row" : "")">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div>
                                        <span class="fw-medium">@provider.Name</span>
                                        @if (provider.IsDefault)
                                        {
                                            <span class="default-badge">Default</span>
                                        }
                                    </div>
                                    <label class="toggle-switch">
                                        <input type="checkbox" checked="@provider.IsEnabled"
                                            @onchange="() => ToggleEnabled(provider)" />
                                        <span class="toggle-slider"></span>
                                    </label>
                                </div>
                                <div class="small text-muted mb-2">
                                    <span class="me-3">@provider.Type</span>
                                    <span>@provider.ConnectionMode</span>
                                </div>
                                <div class="d-flex flex-wrap gap-2">
                                    <button class="btn btn-sm btn-outline-secondary" @onclick="() => TestConnection(provider)"
                                        disabled="@(TestingId == provider.Id)">
                                        @(TestingId == provider.Id ? "Testing..." : "Test")
                                    </button>
                                    @if (!provider.IsDefault)
                                    {
                                        <button class="btn btn-sm btn-outline-primary" @onclick="() => MakeDefault(provider)">
                                            Set Default
                                        </button>
                                    }
                                    <button class="btn btn-sm btn-outline-secondary"
                                        @onclick="() => EditProvider(provider)">Edit</button>
                                    <button class="btn btn-sm btn-outline-danger"
                                        @onclick="() => DeleteProvider(provider)">Delete</button>
                                </div>
                                @if (TestResults.TryGetValue(provider.Id, out var result))
                                {
                                    <div class="mt-2 @(result.IsConnected ? "test-success" : "test-failure")">
                                        <strong>@(result.IsConnected ? "✓ Connected" : "✗ Failed")</strong>
                                        @if (!result.IsConnected && !string.IsNullOrEmpty(result.ErrorMessage))
                                        {
                                            <div class="error-details">
                                                <pre>@result.ErrorMessage</pre>
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                        }
                    </div>

                    @* Desktop: Table layout *@
                    <div class="table-responsive d-none d-lg-block">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Name</th>
                                    <th>Type</th>
                                    <th>Mode</th>
                                    <th>Enabled</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var provider in ProvidersList)
                                {
                                    <tr class="@(provider.IsDefault ? "default-provider-row" : "")">
                                        <td>
                                            @provider.Name
                                            @if (provider.IsDefault)
                                            {
                                                <span class="default-badge">Default</span>
                                            }
                                        </td>
                                        <td>@provider.Type</td>
                                        <td>@provider.ConnectionMode</td>
                                        <td>
                                            <label class="toggle-switch">
                                                <input type="checkbox" checked="@provider.IsEnabled"
                                                    @onchange="() => ToggleEnabled(provider)" />
                                                <span class="toggle-slider"></span>
                                            </label>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <button class="btn btn-outline-secondary"
                                                    @onclick="() => TestConnection(provider)"
                                                    disabled="@(TestingId == provider.Id)">
                                                    @(TestingId == provider.Id ? "Testing..." : "Test")
                                                </button>
                                                @if (!provider.IsDefault)
                                                {
                                                    <button class="btn btn-outline-primary" @onclick="() => MakeDefault(provider)"
                                                        title="Set as default provider">
                                                        Default
                                                    </button>
                                                }
                                                <button class="btn btn-outline-secondary"
                                                    @onclick="() => EditProvider(provider)">Edit</button>
                                                <button class="btn btn-outline-danger"
                                                    @onclick="() => DeleteProvider(provider)">Delete</button>
                                            </div>
                                        </td>
                                    </tr>
                                    @if (TestResults.TryGetValue(provider.Id, out var result))
                                    {
                                        <tr class="table-light">
                                            <td colspan="5">
                                                <div class="@(result.IsConnected ? "test-success" : "test-failure")">
                                                    <strong>@(result.IsConnected ? "✓ Connection successful" : "✗ Connection                                            failed")</strong>
                                                    @if (!result.IsConnected && !string.IsNullOrEmpty(result.ErrorMessage))
                                                    {
                                                        <div class="error-details">
                                                            <pre>@result.ErrorMessage</pre>
                                                        </div>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private List<Provider> ProvidersList { get; set; } = new();
    private bool IsLoading { get; set; } = true;
    private Provider? EditingProvider { get; set; }
    private Provider CurrentProvider { get; set; } = new();
    private Guid? TestingId { get; set; }
    private Dictionary<Guid, ConnectionTestResult> TestResults { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadProviders();
    }

    private async Task LoadProviders()
    {
        IsLoading = true;
        try
        {
            ProvidersList = (await ProviderService.GetAllAsync()).ToList();
        }
        finally
        {
            IsLoading = false;
        }
    }

    private void EditProvider(Provider provider)
    {
        EditingProvider = provider;
        CurrentProvider = new Provider
        {
            Id = provider.Id,
            Name = provider.Name,
            Type = provider.Type,
            ConnectionMode = provider.ConnectionMode,
            ExecutablePath = provider.ExecutablePath,
            WorkingDirectory = provider.WorkingDirectory,
            ApiEndpoint = provider.ApiEndpoint,
            ApiKey = provider.ApiKey,
            IsEnabled = provider.IsEnabled,
            CreatedAt = provider.CreatedAt,
            LastConnectedAt = provider.LastConnectedAt
        };
    }

    private void CancelEdit()
    {
        EditingProvider = null;
        CurrentProvider = new Provider();
    }

    private async Task HandleProviderSaved()
    {
        EditingProvider = null;
        CurrentProvider = new Provider();
        await LoadProviders();
    }

    private async Task DeleteProvider(Provider provider)
    {
        await ProviderService.DeleteAsync(provider.Id);
        await LoadProviders();
    }

    private async Task ToggleEnabled(Provider provider)
    {
        try
        {
            await ProviderService.SetEnabledAsync(provider.Id, !provider.IsEnabled);
            await LoadProviders();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error toggling provider: {ex.Message}");
        }
    }

    private async Task MakeDefault(Provider provider)
    {
        try
        {
            await ProviderService.SetDefaultAsync(provider.Id);
            await LoadProviders();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error setting default provider: {ex.Message}");
        }
    }

    private async Task TestConnection(Provider provider)
    {
        TestingId = provider.Id;
        TestResults.Remove(provider.Id);
        StateHasChanged();

        try
        {
            var result = await ProviderService.TestConnectionWithDetailsAsync(provider.Id);
            TestResults[provider.Id] = result;
        }
        catch (Exception ex)
        {
            TestResults[provider.Id] = new ConnectionTestResult
            {
                IsConnected = false,
                ErrorMessage = $"Unexpected error: {ex.Message}"
            };
        }
        finally
        {
            TestingId = null;
        }
    }
}