@page "/"
@attribute [Authorize]
@inject IProviderService ProviderService
@inject IProjectService ProjectService

<PageHeader Title="Dashboard" Subtitle="Your distributed agent job management system" />

<div class="row g-3 g-lg-4">
    <div class="col-12">
        <section>
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="mb-0 fw-semibold">
                    <i class="bi bi-folder me-2 opacity-75"></i>Recent Projects
                </h5>
                <a href="/projects" class="btn btn-sm btn-outline-secondary">View All</a>
            </div>

            @if (IsLoading)
            {
                <LoadingSpinner />
            }
            else if (!Projects.Any())
            {
                <EmptyState Icon="folder" Title="No projects yet"
                    Message="Create your first project to start running AI agent jobs.">
                    <a href="/projects" class="btn btn-sm btn-primary">
                        <i class="bi bi-plus-lg me-1"></i>Create Project
                    </a>
                </EmptyState>
            }
            else
            {
                <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-3">
                    @foreach (var project in Projects)
                    {
                        <div class="col">
                            <ProjectCard ProjectId="@project.Id" Name="@project.Name" Description="@project.Description"
                                WorkingPath="@project.WorkingPath" CreatedAt="@project.CreatedAt" />
                        </div>
                    }
                </div>
            }
        </section>
    </div>

    <div class="col-12">
        <section>
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="mb-0 fw-semibold">
                    <i class="bi bi-cpu me-2 opacity-75"></i>Providers
                </h5>
                <a href="/providers" class="btn btn-sm btn-outline-secondary">Manage</a>
            </div>

            @if (IsLoading)
            {
                <LoadingSpinner />
            }
            else if (!Providers.Any())
            {
                <EmptyState Icon="cpu" Title="No providers configured"
                    Message="Connect to AI coding agents like Claude Code CLI.">
                    <a href="/providers" class="btn btn-sm btn-primary">
                        <i class="bi bi-plus-lg me-1"></i>Add Provider
                    </a>
                </EmptyState>
            }
            else
            {
                <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-3">
                    @foreach (var provider in Providers)
                    {
                        <div class="col">
                            <ProviderCard Name="@provider.Name" ProviderType="@provider.Type.ToString()"
                                ConnectionMode="@provider.ConnectionMode.ToString()" IsEnabled="@provider.IsEnabled" />
                        </div>
                    }
                </div>
            }
        </section>
    </div>
</div>

@code {
    private List<Provider> Providers { get; set; } = new();
    private List<Project> Projects { get; set; } = new();
    private bool IsLoading { get; set; } = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var providersTask = ProviderService.GetAllAsync();
            var projectsTask = ProjectService.GetRecentAsync(10);

            await Task.WhenAll(providersTask, projectsTask);

            Providers = (await providersTask).ToList();
            Projects = (await projectsTask).ToList();
        }
        finally
        {
            IsLoading = false;
        }
    }
}