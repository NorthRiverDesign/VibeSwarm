@page "/"
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@namespace VibeSwarm.Web.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">

    <head>
        <meta charset="utf-8" />
        <script>
            // Auto-detect OS color scheme preference
            (function () {
                const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
                document.documentElement.setAttribute('data-bs-theme', prefersDark ? 'dark' : 'light');
            })();
        </script>
        <meta name="viewport"
            content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover" />

        <!-- PWA Meta Tags -->
        <meta name="application-name" content="VibeSwarm" />
        <meta name="theme-color" content="#1a1d21" />
        <meta name="mobile-web-app-capable" content="yes" />

        <!-- iOS PWA Meta Tags -->
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
        <meta name="apple-mobile-web-app-title" content="VibeSwarm" />
        <meta name="format-detection" content="telephone=no" />

        <title>VibeSwarm</title>
        <base href="~/" />

        <!-- PWA Manifest -->
        <link rel="manifest" href="manifest.json?v=5" />

        <!-- Icons - cache-busted for PWA updates -->
        <link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png?v=5" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg?v=5" />

        <!-- iOS Icons - no query strings; iOS Safari strips/ignores them and caches icons separately -->
        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
        <link rel="apple-touch-icon" sizes="167x167" href="/apple-touch-icon-167x167.png" />
        <link rel="apple-touch-icon" sizes="152x152" href="/apple-touch-icon-152x152.png" />
        <link rel="apple-touch-icon" sizes="120x120" href="/apple-touch-icon-120x120.png" />
        <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
        <link href="lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
        <link href="css/bootstrap-icons.min.css" rel="stylesheet" />
        <link href="css/site.css" rel="stylesheet" />
    </head>

    <body>
        <component type="typeof(App)" render-mode="ServerPrerendered" />

        <!-- Blazor Reconnection Toast - non-intrusive iOS-native style -->
        <div id="reconnect-toast" class="reconnect-toast" role="alert" aria-live="polite">
            <div class="reconnect-toast-content">
                <div class="reconnect-toast-icon">
                    <div class="reconnect-toast-spinner"></div>
                </div>
                <div class="reconnect-toast-text">
                    <span class="reconnect-toast-title">Reconnecting</span>
                    <span class="reconnect-toast-message">Restoring connection...</span>
                </div>
            </div>
            <div class="reconnect-toast-progress"></div>
        </div>

        <!-- Full-screen Reconnect Modal - shown only after extended disconnection -->
        <div id="components-reconnect-modal" class="reconnect-modal">
            <div class="reconnect-content">
                <div class="reconnect-spinner"></div>
                <p class="reconnect-message">Reconnecting to server...</p>
                <p class="reconnect-submessage text-muted small">This may take a moment after being in the background
                </p>
                <button id="reconnect-reload-btn" class="btn btn-primary d-none" onclick="location.reload()">
                    Reload App
                </button>
            </div>
        </div>

        <script src="lib/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="lib/signalr/signalr.min.js"></script>

        <!-- Blazor Server with iOS PWA-optimized reconnection settings -->
        <script src="_framework/blazor.server.js" autostart="false"></script>
        <script>
            // iOS PWA detection
            const isIOS = /iPad|iPhone|iPod/.test(navigator.userAgent) && !window.MSStream;
            const isStandalone = window.navigator.standalone === true || window.matchMedia('(display-mode: standalone)').matches;
            const isIOSPWA = isIOS && isStandalone;

            // Store for reconnection state
            window.VibeSwarmReconnect = {
                isIOS: isIOS,
                isIOSPWA: isIOSPWA,
                lastHiddenTime: null,
                reconnectAttempts: 0,
                maxAttempts: 10,
                circuitId: null,
                isReconnecting: false,
                circuitDead: false,
                lastConnectionTime: Date.now()
            };

            // Configure and start Blazor with stateful reconnect
            Blazor.start({
                // Enable stateful reconnect for .NET 10+ (preserves circuit state during brief disconnections)
                circuit: {
                    // Configure reconnection policy with iOS-specific delays
                    reconnectionOptions: {
                        maxRetries: isIOSPWA ? 15 : 10,
                        retryIntervalMilliseconds: isIOSPWA ? 2000 : 1500,
                        // Exponential backoff for iOS
                        retryIntervalFunc: (retryContext) => {
                            if (isIOSPWA) {
                                // iOS needs longer delays due to WebSocket suspension
                                const delays = [0, 1000, 2000, 3000, 5000, 8000, 12000, 15000, 20000];
                                return delays[Math.min(retryContext.previousRetryCount, delays.length - 1)];
                            }
                            // Standard exponential backoff with cap
                            return Math.min(1000 * Math.pow(1.5, retryContext.previousRetryCount), 20000);
                        }
                    },
                    // Stateful reconnect configuration
                    configureSignalR: function (builder) {
                        builder
                            .withStatefulReconnect({ bufferSize: 100000 })
                            .withServerTimeout(isIOSPWA ? 60000 : 30000)
                            .withKeepAliveInterval(15000)
                            .withAutomaticReconnect({
                                nextRetryDelayInMilliseconds: (retryContext) => {
                                    // iOS Safari can take 10-30 seconds to resume WebSocket
                                    if (isIOSPWA) {
                                        const iosDelays = [0, 2000, 5000, 10000, 15000, 20000, 30000, 45000, 60000];
                                        return retryContext.previousRetryCount < iosDelays.length
                                            ? iosDelays[retryContext.previousRetryCount]
                                            : 60000;
                                    }
                                    // Standard delays for other platforms - shorter to detect dead circuits faster
                                    const delays = [0, 1000, 2000, 4000, 8000, 15000];
                                    return retryContext.previousRetryCount < delays.length
                                        ? delays[retryContext.previousRetryCount]
                                        : null; // Stop trying after delays exhausted
                                }
                            });
                    }
                },
                // Custom reconnection handlers
                reconnectionHandler: {
                    onConnectionDown: function (options, error) {
                        const errorMsg = error?.message || 'Unknown error';
                        console.log('[Blazor] Connection down:', errorMsg);

                        window.VibeSwarmReconnect.isReconnecting = true;
                        window.VibeSwarmReconnect.reconnectAttempts++;

                        // Check for circuit-specific errors that indicate permanent failure
                        if (errorMsg.includes('Circuit') ||
                            errorMsg.includes('circuit') ||
                            errorMsg.includes('not initialized') ||
                            errorMsg.includes('disposed')) {
                            console.log('[Blazor] Circuit appears to be dead, marking for reload');
                            window.VibeSwarmReconnect.circuitDead = true;
                        }

                        window.dispatchEvent(new CustomEvent('blazor-connection-down', {
                            detail: { error, options, circuitDead: window.VibeSwarmReconnect.circuitDead }
                        }));
                    },
                    onConnectionUp: function () {
                        console.log('[Blazor] Connection restored');
                        window.VibeSwarmReconnect.isReconnecting = false;
                        window.VibeSwarmReconnect.reconnectAttempts = 0;
                        window.VibeSwarmReconnect.circuitDead = false;
                        window.VibeSwarmReconnect.lastConnectionTime = Date.now();
                        window.dispatchEvent(new CustomEvent('blazor-connection-up'));
                    }
                }
            }).then(() => {
                console.log('[Blazor] Started successfully', isIOSPWA ? '(iOS PWA mode)' : '');
                window.VibeSwarmReconnect.lastConnectionTime = Date.now();
            }).catch((err) => {
                console.error('[Blazor] Failed to start:', err);
                // If Blazor fails to start, reload after a delay
                setTimeout(() => window.location.reload(true), 3000);
            });
        </script>
        <script src="js/globalSignalR.js"></script>
        <script src="js/blazorReconnect.js"></script>

        <!-- iOS PWA Mobile Menu Fallback -->
        <!-- Provides native JS fallback when Blazor events become stale after backgrounding -->
        <script>
            (function () {
                'use strict';

                // Only needed for iOS PWA
                const isIOS = /iPad|iPhone|iPod/.test(navigator.userAgent) && !window.MSStream;
                const isStandalone = window.navigator.standalone === true || window.matchMedia('(display-mode: standalone)').matches;
                if (!isIOS || !isStandalone) return;

                let lastToggleTime = 0;
                const DEBOUNCE_MS = 300;

                // Native toggle function that works even when Blazor is stale
                function toggleMobileMenu() {
                    const now = Date.now();
                    if (now - lastToggleTime < DEBOUNCE_MS) return;
                    lastToggleTime = now;

                    const sidebar = document.getElementById('app-sidebar');
                    const overlay = document.getElementById('sidebar-overlay');

                    if (!sidebar) return;

                    const isOpen = sidebar.classList.contains('open');

                    if (isOpen) {
                        sidebar.classList.remove('open');
                        if (overlay) overlay.style.display = 'none';
                    } else {
                        sidebar.classList.add('open');
                        // Create overlay if it doesn't exist (Blazor hasn't rendered it)
                        if (!overlay) {
                            const newOverlay = document.createElement('div');
                            newOverlay.id = 'sidebar-overlay';
                            newOverlay.className = 'sidebar-overlay d-lg-none';
                            newOverlay.style.display = 'block';
                            newOverlay.addEventListener('click', closeMobileMenu);
                            newOverlay.addEventListener('touchend', closeMobileMenu);
                            document.querySelector('.app-layout').appendChild(newOverlay);
                        } else {
                            overlay.style.display = 'block';
                        }
                    }

                    console.log('[MobileMenuFallback] Toggled menu via native JS');
                }

                function closeMobileMenu() {
                    const sidebar = document.getElementById('app-sidebar');
                    const overlay = document.getElementById('sidebar-overlay');

                    if (sidebar) sidebar.classList.remove('open');
                    if (overlay) overlay.style.display = 'none';

                    console.log('[MobileMenuFallback] Closed menu via native JS');
                }

                // Setup fallback event listeners on the toggle button
                function setupFallbackListeners() {
                    const toggleBtn = document.getElementById('mobile-menu-toggle');
                    if (!toggleBtn) {
                        // Retry if not found yet
                        setTimeout(setupFallbackListeners, 500);
                        return;
                    }

                    // Use capture phase to intercept before Blazor
                    // Only trigger if Blazor event didn't fire within a short window
                    let blazorHandled = false;

                    toggleBtn.addEventListener('click', function (e) {
                        // Give Blazor a moment to handle it
                        setTimeout(() => {
                            if (!blazorHandled) {
                                toggleMobileMenu();
                            }
                            blazorHandled = false;
                        }, 100);
                    }, { passive: true });

                    // Also add touchend for iOS
                    toggleBtn.addEventListener('touchend', function (e) {
                        // Prevent ghost click on iOS
                        e.preventDefault();
                        setTimeout(() => {
                            if (!blazorHandled) {
                                toggleMobileMenu();
                            }
                            blazorHandled = false;
                        }, 100);
                    }, { passive: false });

                    // Listen for Blazor's state change to know if it handled the event
                    const observer = new MutationObserver((mutations) => {
                        mutations.forEach((mutation) => {
                            if (mutation.attributeName === 'class') {
                                blazorHandled = true;
                            }
                        });
                    });

                    const sidebar = document.getElementById('app-sidebar');
                    if (sidebar) {
                        observer.observe(sidebar, { attributes: true });
                    }

                    console.log('[MobileMenuFallback] Fallback listeners setup for iOS PWA');
                }

                // Also listen for overlay clicks as backup
                document.addEventListener('click', function (e) {
                    if (e.target && e.target.id === 'sidebar-overlay') {
                        closeMobileMenu();
                    }
                }, { capture: true });

                // Setup when DOM is ready
                if (document.readyState === 'loading') {
                    document.addEventListener('DOMContentLoaded', setupFallbackListeners);
                } else {
                    setupFallbackListeners();
                }

                // Re-setup after Blazor enhanced navigation
                document.addEventListener('enhanced-navigation-end', setupFallbackListeners);
            })();
        </script>

        <!-- Service Worker Registration -->
        <script>
            if ('serviceWorker' in navigator) {
                window.addEventListener('load', () => {
                    navigator.serviceWorker.register('/service-worker.js')
                        .then((registration) => {
                            console.log('ServiceWorker registered:', registration.scope);

                            // Check for updates immediately and periodically
                            registration.update();
                            setInterval(() => registration.update(), 60 * 60 * 1000); // Check hourly

                            // Handle updates
                            registration.addEventListener('updatefound', () => {
                                const newWorker = registration.installing;
                                newWorker.addEventListener('statechange', () => {
                                    if (newWorker.state === 'installed' && navigator.serviceWorker.controller) {
                                        // New version available - refresh to get updated assets
                                        console.log('New version available, refreshing...');
                                        window.location.reload();
                                    }
                                });
                            });
                        })
                        .catch((error) => {
                            console.log('ServiceWorker registration failed:', error);
                        });
                });

                // Handle controller change (when skipWaiting is called)
                navigator.serviceWorker.addEventListener('controllerchange', () => {
                    window.location.reload();
                });
            }
        </script>
    </body>

</html>