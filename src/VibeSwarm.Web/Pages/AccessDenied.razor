@page "/access-denied"
@attribute [AllowAnonymous]

<PageTitle>Access Denied - VibeSwarm</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow border-warning">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="bi bi-shield-lock"></i> Access Denied
                    </h4>
                </div>
                <div class="card-body">
                    <p class="lead">You don't have permission to access this resource.</p>

                    <p class="text-muted">
                        This could happen because:
                    </p>
                    <ul class="text-muted">
                        <li>You're not logged in</li>
                        <li>Your session has expired</li>
                        <li>You don't have the required permissions</li>
                    </ul>

                    <div class="mt-4">
                        <AuthorizeView>
                            <Authorized>
                                <p>You are currently logged in as <strong>@context.User.Identity?.Name</strong>.</p>
                                <a href="/" class="btn btn-primary">Go to Home Page</a>
                            </Authorized>
                            <NotAuthorized>
                                <p>Please log in to continue.</p>
                                <a href="/login?returnUrl=@Uri.EscapeDataString(ReturnUrl ?? "/")"
                                    class="btn btn-primary">
                                    Log In
                                </a>
                            </NotAuthorized>
                        </AuthorizeView>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromQuery]
    public string? ReturnUrl { get; set; }
}