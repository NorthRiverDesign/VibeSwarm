@page "/login"
@attribute [AllowAnonymous]
@layout VibeSwarm.Web.Shared.LoginLayout
@using VibeSwarm.Web.Pages
@namespace VibeSwarm.Web.Pages

<PageTitle>Login - VibeSwarm</PageTitle>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="text-center mb-4">
                <img src="/img/logo_color.png" alt="VibeSwarm Logo" class="img-fluid" style="max-width: 200px;" />
            </div>
            @if (NoUsersExist)
            {
                <div class="alert alert-warning mb-3" role="alert">
                    <h5 class="alert-heading"><i class="bi bi-exclamation-triangle me-2"></i>Configuration Warning</h5>
                    <p class="mb-0">No users exist in the database. Please set <code>DEFAULT_ADMIN_USER</code> and
                        <code>DEFAULT_ADMIN_PASS</code> environment variables in your <code>.env</code> file and restart the
                        application.</p>
                </div>
            }
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">VibeSwarm Login</h3>

                    @if (!string.IsNullOrEmpty(ErrorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @ErrorMessage
                        </div>
                    }

                    <form method="post" action="/Account/Login?returnUrl=@Uri.EscapeDataString(ReturnUrl ?? "/")">
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" id="username" name="Input.Username" class="form-control"
                                placeholder="Enter username" required />
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" id="password" name="Input.Password" class="form-control"
                                placeholder="Enter password" required />
                        </div>

                        <div class="mb-3 form-check">
                            <input type="checkbox" id="rememberMe" name="Input.RememberMe" class="form-check-input"
                                value="true" />
                            <label class="form-check-label" for="rememberMe">
                                Remember me
                            </label>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                Login
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>