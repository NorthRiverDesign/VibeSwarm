@page "/logout"
@attribute [Authorize]
@inject NavigationManager NavigationManager

<PageTitle>Logout - VibeSwarm</PageTitle>

<div class="modal-overlay">
    <div class="modal-dialog-centered">
        <div class="card shadow-lg logout-dialog">
            <div class="card-header text-center">
                <h5 class="mb-0">
                    <i class="bi bi-box-arrow-right me-2"></i>Log Out
                </h5>
            </div>
            <div class="card-body text-center">
                @if (_isLoggingOut)
                {
                    <div class="py-3">
                        <div class="spinner-border text-primary mb-3" role="status">
                            <span class="visually-hidden">Logging out...</span>
                        </div>
                        <p class="mb-0 text-muted">Logging out...</p>
                    </div>
                }
                else
                {
                    <p class="mb-4 text-muted">Are you sure you want to log out?</p>
                    <div class="d-flex gap-2 justify-content-center">
                        <button class="btn btn-secondary btn-action" @onclick="Cancel">
                            <i class="bi bi-x-lg"></i>
                            <span>Cancel</span>
                        </button>
                        <button class="btn btn-danger btn-action" @onclick="ConfirmLogout">
                            <i class="bi bi-box-arrow-right"></i>
                            <span>Log Out</span>
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private bool _isLoggingOut = false;

    private void ConfirmLogout()
    {
        _isLoggingOut = true;
        NavigationManager.NavigateTo("/account/logout", forceLoad: true);
    }

    private void Cancel()
    {
        NavigationManager.NavigateTo("/");
    }
}
