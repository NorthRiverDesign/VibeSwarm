@page "/jobs/view/{JobId:guid}"
@attribute [Authorize]
@inject IJobService JobService
@inject IVersionControlService VersionControlService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@inject NotificationService NotificationService
@implements IAsyncDisposable
@using System.Threading
@using System.Collections.Concurrent
@using VibeSwarm.Shared.Utilities
@using VibeSwarm.Shared.VersionControl

@if (IsLoading)
{
    <LoadingSpinner />
}
else if (Job == null)
{
    <div class="alert alert-warning">
        <p class="mb-0">Job not found.</p>
    </div>
    <a href="/projects" class="btn btn-secondary">Back to Projects</a>
}
else
{
    @* Page Header - Full Width *@
                                                <div
        class="d-flex flex-column flex-lg-row justify-content-between align-items-start gap-3 mb-3 mb-lg-4 pb-3 border-bottom">
        <div class="flex-grow-1 min-width-0 w-100 w-lg-auto">
            <div class="d-flex flex-wrap align-items-center gap-2 mb-2">
                <h3 class="mb-0 fs-4 fw-semibold">Job Details</h3>
                <StatusBadge Status="@Job.Status.ToString()" />
                @if (Job.CancellationRequested && (Job.Status == JobStatus.Started || Job.Status == JobStatus.Processing))
                {
                    <StatusBadge Status="Cancelling" />
                }
            </div>
            @* Repository and Branch Info *@
                                                        @if (!string.IsNullOrEmpty(Job.Project?.GitHubRepository) || !string.IsNullOrEmpty(_branchName))
            {
                <div class="d-flex flex-wrap align-items-center gap-2 mb-2">
                    @if (!string.IsNullOrEmpty(Job.Project?.GitHubRepository))
                    {
                        <span class="badge bg-dark bg-opacity-75 d-inline-flex align-items-center gap-1 fw-normal">
                            <i class="bi bi-github"></i>
                            <span>@Job.Project.GitHubRepository</span>
                        </span>
                    }
                    @if (!string.IsNullOrEmpty(_branchName))
                    {
                        <span class="badge bg-secondary bg-opacity-75 d-inline-flex align-items-center gap-1 fw-normal">
                            <i class="bi bi-diagram-2"></i>
                            <span>@_branchName</span>
                        </span>
                    }
                </div>
            }
            <div class="small text-body-secondary">
                <div class="d-flex flex-wrap gap-2 gap-sm-3 mb-2">
                    <span>Project: <a href="/projects/@Job.ProjectId" class="text-decoration-none">@(Job.Project?.Name ??
                                                    "Unknown")</a></span>
                    <span>Provider: @(Job.Provider?.Name ?? "Unknown")</span>
                    @if (Job.ProcessId.HasValue)
                    {
                        <span class="process-info d-none d-sm-inline">PID: @Job.ProcessId</span>
                    }
                </div>
                <div class="d-flex flex-wrap gap-2 gap-sm-3">
                    <span title="Created"><i
                            class="bi bi-calendar-plus me-1 opacity-75"></i>@Job.CreatedAt.FormatDateTimeShort()</span>
                    @if (Job.StartedAt.HasValue)
                    {
                        <span title="Started"><i
                                class="bi bi-play-circle me-1 opacity-75"></i>@Job.StartedAt.Value.FormatDateTimeShort()</span>
                    }
                    @if (Job.CompletedAt.HasValue)
                    {
                        <span title="Completed"><i
                                class="bi bi-check-circle me-1 opacity-75"></i>@Job.CompletedAt.Value.FormatDateTimeShort()</span>
                    }
                </div>
            </div>
            @* Stats Row - Token usage and cost *@
                                                        @if (Job.ModelUsed != null || Job.InputTokens.HasValue || Job.OutputTokens.HasValue ||
                    Job.TotalCostUsd.HasValue || Job.RetryCount > 0)
            {
                <div
                    class="d-flex flex-wrap gap-2 gap-sm-3 mt-2 pt-2 border-top border-secondary border-opacity-25 job-stats-row">
                    @if (Job.ModelUsed != null)
                    {
                        <span class="stat-pill" title="Model">
                            <i class="bi bi-cpu me-1 opacity-75"></i>@Job.ModelUsed
                        </span>
                    }
                    @if (Job.RetryCount > 0)
                    {
                        <span class="stat-pill" title="Attempt Number">
                            <i class="bi bi-arrow-repeat me-1 opacity-75"></i>Attempt @(Job.RetryCount + 1)
                        </span>
                    }
                    @if (Job.InputTokens.HasValue)
                    {
                        <span class="stat-pill" title="Input Tokens">
                            <i
                                class="bi bi-arrow-right-circle me-1 opacity-75"></i>@TokenHelper.FormatTokenCount(Job.InputTokens.Value)
                        </span>
                    }
                    @if (Job.OutputTokens.HasValue)
                    {
                        <span class="stat-pill" title="Output Tokens">
                            <i
                                class="bi bi-arrow-left-circle me-1 opacity-75"></i>@TokenHelper.FormatTokenCount(Job.OutputTokens.Value)
                        </span>
                    }
                    @if (Job.InputTokens.HasValue && Job.OutputTokens.HasValue)
                    {
                        <span class="stat-pill" title="Total Tokens">
                            <i
                                class="bi bi-arrow-left-right me-1 opacity-75"></i>@TokenHelper.FormatTokenCount(Job.InputTokens.Value
                                            + Job.OutputTokens.Value)
            </span>
                        }
                    @if (Job.TotalCostUsd.HasValue)
                    {
                        <span class="stat-pill stat-pill-cost" title="Total Cost">
                            <i class="bi bi-currency-dollar me-1 opacity-75"></i>@TokenHelper.FormatCost(Job.TotalCostUsd.Value)
                        </span>
                    }
                </div>
            }
        </div>
        <div class="d-flex flex-wrap gap-2 flex-shrink-0">
            @if (CanRetry)
            {
                @if (Job.Status == JobStatus.Failed)
                {
                    <ActionButton Icon="arrow-repeat" Text="@(IsRetrying ? "Retrying..." : "Retry")"
                        Style="ActionButton.ButtonStyle.Primary" IsLoading="@IsRetrying" OnClick="ShowRetryModal" />
                }
                else
                {
                    <ActionButton Icon="arrow-repeat" Text="@(IsRetrying ? "Retrying..." : "Retry")"
                        Style="ActionButton.ButtonStyle.Primary" IsLoading="@IsRetrying" OnClick="RetryJob" />
                }
            }
            @if (CanCancel)
            {
                <ActionButton Icon="x-circle" Text="@(IsCancelling ? "Cancelling..." : "Cancel")"
                    Style="ActionButton.ButtonStyle.Danger" IsLoading="@IsCancelling" OnClick="CancelJob" />
            }
            @if (CanForceCancel)
            {
                <ActionButton Icon="stop-circle" Text="@(IsForceCancelling ? "Stopping..." : "Force Stop")"
                    Style="ActionButton.ButtonStyle.Danger" Outline="true" IsLoading="@IsForceCancelling"
                    OnClick="ForceCancelJob" />
            }
            <a href="@BackUrl" class="btn btn-secondary d-inline-flex align-items-center gap-1">
                <i class="bi bi-arrow-left"></i>
                <span>Back</span>
            </a>
        </div>
    </div>

    @* Main Content - Column Layout *@
                                                <div class="row g-3 g-lg-4 job-detail-content mx-0">
        @* Left Column - Goal & Output on mobile first *@
                                                    <div class="col-12 col-xl-5 order-2 order-xl-1 px-0 px-lg-3">
            <div class="card mb-3 mb-lg-4">
                <div class="card-header bg-body-secondary d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-semibold"><i class="bi bi-bullseye me-2 opacity-75"></i>Goal Prompt</h5>
                    <button type="button" class="btn btn-sm btn-outline-secondary" @onclick="ShowFullPromptModal"
                        title="View full prompt">
                        <i class="bi bi-arrows-fullscreen me-1"></i>
                        <span class="d-none d-sm-inline">View Full</span>
                    </button>
                </div>
                <div class="card-body d-flex flex-column gap-3">
                    <div class="goal-prompt-box">@Job.GoalPrompt</div>

                    @if (Job.SessionId != null)
                    {
                        <div class="d-flex flex-wrap gap-2">
                            <StatItem Label="Session ID" Value="@Job.SessionId" Monospace="true" />
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Job.ErrorMessage))
                    {
                        <div>
                            <h6 class="text-danger mb-2"><i class="bi bi-exclamation-triangle me-1"></i>Error</h6>
                            <pre class="error-output">@Job.ErrorMessage</pre>
                        </div>
                    }

                    @if (Job.Status == JobStatus.Cancelled)
                    {
                        <div class="info-section">
                            <h6>Job Cancelled</h6>
                            <p class="mb-0">This job was cancelled and can be retried. Click "Retry" to run it again.</p>
                        </div>
                    }
                    else if (Job.Status == JobStatus.Failed && CanRetry)
                    {
                        <div class="info-section">
                            <h6>Job Failed</h6>
                            <p class="mb-0">This job failed during execution. You can retry it by clicking "Retry" above.</p>
                        </div>
                    }
                </div>
            </div>

            @* User Interaction Section - shown when job is paused waiting for input *@
                                                        @if (Job.Status == JobStatus.Paused && !string.IsNullOrEmpty(Job.PendingInteractionPrompt))
            {
                <div class="card mb-3 mb-lg-4 border-warning">
                    <div class="card-header bg-warning bg-opacity-25 d-flex align-items-center">
                        <i class="bi bi-chat-left-text me-2 text-warning fs-5"></i>
                        <strong class="text-warning">User Input Required</strong>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <p class="mb-2 text-body-secondary small">The CLI agent is asking:</p>
                            <pre
                                class="interaction-prompt bg-body-secondary p-3 rounded mb-0">@Job.PendingInteractionPrompt</pre>
                        </div>

                        @if (_interactionChoices != null && _interactionChoices.Count > 0)
                        {
                            <div class="mb-3">
                                <label class="form-label small text-body-secondary">Choose an option:</label>
                                <div class="d-flex flex-wrap gap-2">
                                    @foreach (var choice in _interactionChoices)
                                    {
                                        <button type="button" class="btn btn-outline-primary"
                                            @onclick="() => SubmitInteractionResponse(choice)" disabled="@_isSubmittingResponse">
                                            @choice
                                        </button>
                                    }
                                </div>
                            </div>
                        }

                        <div class="mb-3">
                            <label for="interactionResponse" class="form-label small text-body-secondary">
                                Or enter your response:
                            </label>
                            <div class="input-group">
                                <input type="text" id="interactionResponse" class="form-control" @bind="_interactionResponse"
                                    @bind:event="oninput" @onkeyup="HandleResponseKeyPress" placeholder="Type your response..."
                                    disabled="@_isSubmittingResponse" />
                                <button class="btn btn-primary" type="button" @onclick="SubmitTypedResponse"
                                    disabled="@(_isSubmittingResponse || string.IsNullOrWhiteSpace(_interactionResponse))">
                                    @if (_isSubmittingResponse)
                                    {
                                        <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                                        <span>Sending...</span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-send me-1"></i>
                                        <span>Send</span>
                                    }
                                </button>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(_interactionError))
                        {
                            <div class="alert alert-danger py-2 mb-0">
                                <i class="bi bi-exclamation-triangle me-1"></i>@_interactionError
                            </div>
                        }

                        @if (Job.InteractionRequestedAt.HasValue)
                        {
                            <p class="text-body-secondary small mb-0 mt-2">
                                <i class="bi bi-clock me-1"></i>
                                Waiting since @Job.InteractionRequestedAt.Value.FormatDateTimeShort()
                            </p>
                        }
                    </div>
                </div>
            }

            @* Live Output Section - shown when job is running *@
            @if (IsJobActive && _liveOutput.Count > 0)
            {
                <div class="card mb-3 mb-lg-4">
                    <div
                        class="card-header bg-body-secondary d-flex justify-content-between align-items-center flex-wrap gap-2">
                        <div class="d-flex align-items-center">
                            <span class="live-indicator me-2"></span>
                            <strong>Live Output</strong>
                            <span class="text-body-secondary ms-2 small">(@_liveOutput.Count)</span>
                        </div>
                        <ActionButton Icon="trash" Text="Clear" Outline="true" Size="ActionButton.ButtonSize.Small"
                            HideTextOnMobile="true" OnClick="ClearLiveOutput" />
                    </div>
                    <div class="card-body p-0">
                        <div class="live-output-container" @ref="_outputContainer">
                            @foreach (var line in _liveOutput.TakeLast(MaxOutputLines))
                            {
                                <div class="output-line @(line.IsError ? "output-error" : "output-stdout")">
                                    <span class="output-time d-none d-sm-inline">[@line.Timestamp.FormatTime()]</span>
                                    <span class="output-text">@line.Content</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }

            @* Saved Console Output - shown after job completes *@
            @if (!IsJobActive && !string.IsNullOrEmpty(Job.ConsoleOutput))
            {
                <div class="card mb-3 mb-lg-4">
                    <div class="card-header bg-body-secondary d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-terminal me-2 opacity-75"></i>
                            <strong>Console Output</strong>
                        </div>
                        <ActionButton Icon="@(_showConsoleOutput ? "eye-slash" : "eye")"
                            Text="@(_showConsoleOutput ? "Hide" : "Show")" Outline="true" Size="ActionButton.ButtonSize.Small"
                            HideTextOnMobile="true" OnClick="ToggleConsoleOutput" />
                    </div>
                    @if (_showConsoleOutput)
                    {
                        <div class="card-body p-0">
                            <pre class="console-output-box">@Job.ConsoleOutput</pre>
                        </div>
                    }
                </div>
            }

            @* Git Diff Section - shown after job completes if changes were detected *@
            @if (_isLoadingGitDiff)
            {
                <div class="card mb-3 mb-lg-4">
                    <div class="card-header bg-body-secondary">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-git me-2 opacity-75"></i>
                            <strong>Git Changes</strong>
                        </div>
                    </div>
                    <div class="card-body text-center py-4">
                        <div class="spinner-border text-primary mb-3" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="text-body-secondary mb-0">
                            <i class="bi bi-hourglass-split me-1"></i>Analyzing git changes...
                        </p>
                    </div>
                </div>
            }
            else if (!IsJobActive && !string.IsNullOrEmpty(Job.GitDiff))
            {
                <div class="card mb-3 mb-lg-4">
                    <div class="card-header bg-body-secondary">
                        <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-git me-2 opacity-75"></i>
                                <strong>Git Changes</strong>
                                <span class="badge bg-secondary ms-2">@_parsedDiffFiles.Count</span>
                            </div>
                            <div class="d-flex gap-1 gap-sm-2">
                                <div class="btn-group d-none d-sm-inline-flex" role="group"
                                    aria-label="Expand/Collapse all files">
                                    <button type="button"
                                        class="btn btn-sm @(_allExpanded ? "btn-secondary" : "btn-outline-secondary")"
                                        @onclick="ExpandAllDiffs" title="Expand all files" disabled="@_allExpanded">
                                        <i class="bi bi-arrows-expand"></i>
                                    </button>
                                    <button type="button"
                                        class="btn btn-sm @(_allCollapsed ? "btn-secondary" : "btn-outline-secondary")"
                                        @onclick="CollapseAllDiffs" title="Collapse all files" disabled="@_allCollapsed">
                                        <i class="bi bi-arrows-collapse"></i>
                                    </button>
                                </div>
                                <ActionButton Icon="@(_showGitDiff ? "eye-slash" : "eye")"
                                    Text="@(_showGitDiff ? "Hide" : "Show")" Outline="true" Size="ActionButton.ButtonSize.Small"
                                    HideTextOnMobile="true" OnClick="ToggleGitDiff" />
                            </div>
                        </div>
                    </div>
                    @if (_showGitDiff)
                    {
                        <div class="card-body p-0">
                            <div class="accordion" id="diffAccordion">
                                @foreach (var (file, index) in _parsedDiffFiles.Select((f, i) => (f, i)))
                                {
                                    var collapseId = $"diffCollapse{index}";
                                    var headerId = $"diffHeader{index}";
                                    var isExpanded = _expandedDiffFiles.Contains(index);
                                    <div class="accordion-item">
                                        <h2 class="accordion-header" id="@headerId">
                                            <button class="accordion-button @(isExpanded ? "" : "collapsed")" type="button"
                                                @onclick="() => ToggleDiffFile(index)">
                                                <span class="diff-file-icon">
                                                    @if (file.IsNew)
                                                    {
                                                        <i class="bi bi-file-earmark-plus text-success" title="New file"></i>
                                                    }
                                                    else if (file.IsDeleted)
                                                    {
                                                        <i class="bi bi-file-earmark-minus text-danger" title="Deleted file"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="bi bi-file-earmark-diff text-warning" title="Modified file"></i>
                                                    }
                                                </span>
                                                <span class="diff-file-name">@file.FileName</span>
                                                <span class="diff-stats">
                                                    @if (file.Additions > 0)
                                                    {
                                                        <span class="text-success">+@file.Additions</span>
                                                    }
                                                    @if (file.Deletions > 0)
                                                    {
                                                        <span class="text-danger ms-1">-@file.Deletions</span>
                                                    }
                                                </span>
                                            </button>
                                        </h2>
                                        <div id="@collapseId" class="accordion-collapse @(isExpanded ? "show" : "collapse")">
                                            <div class="accordion-body p-0">
                                                <div class="diff-container">
                                                    @((MarkupString)FormatFileDiff(file.DiffContent))
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>

                @* Commit Section - shown when there are git changes *@
                                                                                                        <div class="card mb-3 mb-lg-4">
                    <div class="card-header bg-body-secondary d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-cloud-upload me-2 opacity-75"></i>
                            <strong>Commit</strong>
                        </div>
                        @if (!string.IsNullOrEmpty(_branchName) && !_changesPushed)
                        {
                            <span class="branch-info text-truncate">
                                <i class="bi bi-diagram-2 me-1"></i>
                                @_branchName
                            </span>
                        }
                    </div>
                    @if (!_changesPushed)
                    {
                        <div class="card-body">
                            <label for="commitMessage" class="form-label d-flex flex-wrap align-items-center gap-2 mb-2">
                                <span>Commit Message</span>
                                @if (_isLoadingSummary)
                                {
                                    <span class="badge bg-secondary">
                                        <span class="spinner-border spinner-border-sm me-1" role="status"
                                            style="width: 0.75rem; height: 0.75rem;"></span>
                                        Generating...
                                    </span>
                                }
                                else if (!string.IsNullOrWhiteSpace(Job.SessionSummary))
                                {
                                    <span class="badge bg-info">
                                        <i class="bi bi-robot me-1"></i>AI Generated
                                    </span>
                                }
                            </label>
                            <textarea id="commitMessage" class="commit-message-input" @bind="_commitMessage" @bind:event="oninput"
                                placeholder="@(_isLoadingSummary ? "Generating commit message..." : "Enter a descriptive commit message...")"
                                rows="3" disabled="@_isPushing"></textarea>

                            @if (!string.IsNullOrEmpty(_summaryError))
                            {
                                <div class="alert alert-warning mt-2 mb-0 py-2 px-3 small">
                                    <i class="bi bi-exclamation-triangle me-1"></i>
                                    @_summaryError
                                    <button type="button" class="btn btn-sm btn-outline-warning ms-2" @onclick="RefreshSummary">
                                        <i class="bi bi-arrow-repeat"></i> Retry
                                    </button>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(_pushError))
                            {
                                <div class="push-error mt-3">
                                    <i class="bi bi-x-circle me-1"></i>
                                    @_pushError
                                </div>
                            }
                        </div>
                        <div class="card-footer bg-body-secondary">
                            <button class="btn btn-primary" @onclick="CommitAndPushChanges" disabled="@(!CanPush)">
                                @if (_isPushing)
                                {
                                    <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                                    <span class="d-none d-sm-inline">@_pushStatus</span>
                                    <span class="d-sm-none">Pushing...</span>
                                }
                                else
                                {
                                    <i class="bi bi-cloud-upload me-1"></i>
                                    <span>Commit & Push</span>
                                }
                            </button>
                        </div>
                    }
                    else
                    {
                        <div class="card-body">
                            <div class="push-success">
                                <i class="bi bi-check-circle-fill fs-4 text-success"></i>
                                <div>
                                    <strong>Changes pushed successfully!</strong>
                                    <div class="d-flex flex-wrap gap-2 mt-1">
                                        @if (!string.IsNullOrEmpty(_pushedCommitHash))
                                        {
                                            <span class="font-monospace small">
                                                <i class="bi bi-git me-1"></i>@_pushedCommitHash[..Math.Min(7,
                                                                                _pushedCommitHash.Length)]
                            </span>
                                                        }
                                        @if (!string.IsNullOrEmpty(_branchName))
                                        {
                                            <span class="font-monospace small">
                                                <i class="bi bi-diagram-2 me-1"></i>@_branchName
                                            </span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else if (!IsJobActive && Job.Status == JobStatus.Completed && string.IsNullOrEmpty(Job.GitDiff))
            {
                <div class="card">
                    <div class="card-header bg-body-secondary">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-git me-2 opacity-75"></i>
                            <strong>Git Changes</strong>
                        </div>
                    </div>
                    <div class="card-body text-center">
                        <p class="text-body-secondary mb-3">
                            <i class="bi bi-info-circle me-2 opacity-75"></i>No file changes detected.
                        </p>
                        <button class="btn btn-outline-secondary btn-sm" @onclick="CheckGitDiffAsync"
                            disabled="@_isCheckingGitDiff">
                            @if (_isCheckingGitDiff)
                            {
                                <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                                <span>Checking...</span>
                            }
                            else
                            {
                                <i class="bi bi-arrow-repeat me-1"></i>
                                <span>Check again</span>
                            }
                        </button>
                    </div>
                </div>
            }
        </div>

        @* Right Column - Conversation Messages (shows first on mobile) *@
                                                    <div class="col-12 col-xl-7 order-1 order-xl-2 px-0 px-lg-3">
            <div class="card">
                <div class="card-header bg-body-secondary d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-semibold"><i class="bi bi-chat-dots me-2 opacity-75"></i>Conversation</h5>
                    <span class="badge bg-secondary">@Job.Messages.Count</span>
                </div>
                <div class="card-body p-2 p-sm-3">
                    @if (Job.Status == JobStatus.Started || Job.Status == JobStatus.Processing)
                    {
                        <div class="activity-indicator mb-3">
                            <span class="activity-spinner"></span>
                            <span class="activity-text">@(Job.CurrentActivity ?? "Working...")</span>
                            @if (Job.LastActivityAt.HasValue)
                            {
                                <span class="activity-time">@Job.LastActivityAt.Value.FormatTime()</span>
                            }
                        </div>
                    }

                    @if (!Job.Messages.Any())
                    {
                        <div class="empty-state">
                            @if (Job.Status == JobStatus.New || Job.Status == JobStatus.Pending)
                            {
                                <text>Job is waiting to be processed...</text>
                            }
                            else if (Job.Status == JobStatus.Started || Job.Status == JobStatus.Processing)
                            {
                                <text>Agent is working on the task...</text>
                            }
                            else
                            {
                                <text>No conversation messages recorded.</text>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="chat-messages-container">
                            @foreach (var message in Job.Messages)
                            {
