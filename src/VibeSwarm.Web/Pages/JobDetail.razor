@page "/jobs/{JobId:guid}"
@attribute [Authorize]
@inject IJobService JobService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@implements IAsyncDisposable
@using System.Threading
@using System.Collections.Concurrent
@using VibeSwarm.Shared.Utilities

@if (IsLoading)
{
    <div class="d-flex justify-content-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (Job == null)
{
    <div class="alert alert-warning">
        <p class="mb-0">Job not found.</p>
    </div>
    <a href="/projects" class="btn btn-secondary">Back to Projects</a>
}
else
{
    <div class="d-flex justify-content-between align-items-start mb-4">
        <div>
            <h3 class="mb-2">Job Details</h3>
            <div class="d-flex align-items-center gap-2 mb-2">
                <span class="badge status-@Job.Status.ToString().ToLower()">
                    @if (Job.Status == JobStatus.Started || Job.Status == JobStatus.Processing)
                    {
                        <span class="status-spinner"></span>
                    }
                    @Job.Status
                </span>
                @if (Job.CancellationRequested && (Job.Status == JobStatus.Started || Job.Status == JobStatus.Processing))
                {
                    <span class="badge status-cancelling">
                        <span class="status-spinner"></span>
                        Cancelling
                    </span>
                }
            </div>
            <p class="text-muted mb-0">
                <span class="me-3">Project: <a href="/projects/@Job.ProjectId">@(Job.Project?.Name ?? "Unknown")</a></span>
                <span class="me-3">Provider: @(Job.Provider?.Name ?? "Unknown")</span>
                @if (Job.ProcessId.HasValue)
                {
                    <span class="process-info">PID: @Job.ProcessId</span>
                }
            </p>
        </div>
        <div class="d-flex gap-2">
            @if (CanRetry)
            {
                <button class="btn btn-primary" @onclick="RetryJob" disabled="@IsRetrying">
                    @if (IsRetrying)
                    {
                        <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                    }
                    @(IsRetrying ? "Resetting..." : "Retry Job")
                </button>
            }
            @if (CanCancel)
            {
                <button class="btn btn-danger" @onclick="CancelJob" disabled="@IsCancelling">
                    @if (IsCancelling)
                    {
                        <span class="spinner-small"></span>
                    }
                    @(IsCancelling ? "Cancelling..." : "Cancel Job")
                </button>
            }
            @if (CanForceCancel)
            {
                <button class="btn btn-outline-danger" @onclick="ForceCancelJob" disabled="@IsForceCancelling">
                    @if (IsForceCancelling)
                    {
                        <span class="spinner-small"></span>
                    }
                    @(IsForceCancelling ? "Force Cancelling..." : "Force Cancel")
                </button>
            }
            <a href="/projects/@Job.ProjectId" class="btn btn-secondary">Back to Project</a>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-5">
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Goal Prompt</h5>
                </div>
                <div class="card-body">
                    <div class="goal-prompt-box mb-3">@Job.GoalPrompt</div>

                    <div class="job-stats mb-3">
                        @if (Job.SessionId != null)
                        {
                            <div class="stat-item">
                                <span class="stat-label">Session ID</span>
                                <span class="stat-value mono">@Job.SessionId</span>
                            </div>
                        }
                        @if (Job.InputTokens.HasValue)
                        {
                            <div class="stat-item">
                                <span class="stat-label">Input Tokens</span>
                                <span class="stat-value">@Job.InputTokens.Value.ToString("N0")</span>
                            </div>
                        }
                        @if (Job.OutputTokens.HasValue)
                        {
                            <div class="stat-item">
                                <span class="stat-label">Output Tokens</span>
                                <span class="stat-value">@Job.OutputTokens.Value.ToString("N0")</span>
                            </div>
                        }
                        @if (Job.TotalCostUsd.HasValue)
                        {
                            <div class="stat-item">
                                <span class="stat-label">Cost</span>
                                <span class="stat-value">$@Job.TotalCostUsd.Value.ToString("F4")</span>
                            </div>
                        }
                        <div class="stat-item">
                            <span class="stat-label">Created</span>
                            <span class="stat-value">@Job.CreatedAt.ToLocalTime().ToString("g")</span>
                        </div>
                        @if (Job.StartedAt.HasValue)
                        {
                            <div class="stat-item">
                                <span class="stat-label">Started</span>
                                <span class="stat-value">@Job.StartedAt.Value.ToLocalTime().ToString("g")</span>
                            </div>
                        }
                        @if (Job.CompletedAt.HasValue)
                        {
                            <div class="stat-item">
                                <span class="stat-label">Completed</span>
                                <span class="stat-value">@Job.CompletedAt.Value.ToLocalTime().ToString("g")</span>
                            </div>
                        }
                    </div>

                    @if (!string.IsNullOrEmpty(Job.ErrorMessage))
                    {
                        <div class="error-section">
                            <h6 class="text-danger">Error</h6>
                            <pre class="error-output">@Job.ErrorMessage</pre>
                        </div>
                    }

                    @if (Job.Status == JobStatus.Cancelled)
                    {
                        <div class="info-section">
                            <h6>Job Cancelled</h6>
                            <p class="mb-0">This job was cancelled and can be retried. Click "Retry Job" to run it again.</p>
                        </div>
                    }
                    else if (Job.Status == JobStatus.Failed && CanRetry)
                    {
                        <div class="info-section">
                            <h6>Job Failed</h6>
                            <p class="mb-0">This job failed during execution. You can retry it by clicking "Retry Job" above.</p>
                        </div>
                    }
                </div>
            </div>

            @* Live Output Section - shown when job is running *@
            @if (IsJobActive && _liveOutput.Count > 0)
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div>
                            <span class="live-indicator me-2"></span>
                            <strong>Live Output</strong>
                            <span class="text-muted ms-2">(@_liveOutput.Count lines)</span>
                        </div>
                        <button class="btn btn-sm btn-outline-secondary" @onclick="ClearLiveOutput">Clear</button>
                    </div>
                    <div class="card-body p-0">
                        <div class="live-output-container" @ref="_outputContainer">
                            @foreach (var line in _liveOutput.TakeLast(MaxOutputLines))
                            {
                                <div class="output-line @(line.IsError ? "output-error" : "output-stdout")">
                                    <span class="output-time">[@line.Timestamp.ToLocalTime().ToString("HH:mm:ss")]</span>
                                    <span class="output-text">@line.Content</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }

            @* Saved Console Output - shown after job completes *@
            @if (!IsJobActive && !string.IsNullOrEmpty(Job.ConsoleOutput))
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div>
                            <span class="me-2">üìã</span>
                            <strong>Console Output</strong>
                        </div>
                        <button class="btn btn-sm btn-outline-secondary" @onclick="ToggleConsoleOutput">
                            @(_showConsoleOutput ? "Hide" : "Show")
                        </button>
                    </div>
                    @if (_showConsoleOutput)
                    {
                        <div class="card-body p-0">
                            <pre class="console-output-box">@Job.ConsoleOutput</pre>
                        </div>
                    }
                </div>
            }

            @* Git Diff Section - shown after job completes if changes were detected *@
            @if (!IsJobActive && !string.IsNullOrEmpty(Job.GitDiff))
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div>
                            <span class="me-2">üìù</span>
                            <strong>Git Changes</strong>
                        </div>
                        <button class="btn btn-sm btn-outline-secondary" @onclick="ToggleGitDiff">
                            @(_showGitDiff ? "Hide" : "Show")
                        </button>
                    </div>
                    @if (_showGitDiff)
                    {
                        <div class="card-body p-0">
                            <div class="diff-container">
                                @((MarkupString)FormatGitDiff(Job.GitDiff))
                            </div>
                        </div>
                    }
                </div>

                @* Commit and Push Section - shown when there are git changes *@
                <div class="card shadow-sm mb-4">
                    <div class="card-header">
                        <span class="me-2">üöÄ</span>
                        <strong>Commit & Push Changes</strong>
                    </div>
                    <div class="card-body">
                        @if (!_changesPushed)
                        {
                            <div class="commit-form">
                                <div class="mb-3">
                                    <label for="commitMessage" class="form-label">
                                        Commit Message
                                        @if (!string.IsNullOrWhiteSpace(Job.SessionSummary))
                                        {
                                            <span class="badge bg-info ms-2" title="Pre-populated from AI session summary">
                                                <span class="ai-icon">ü§ñ</span> AI Generated
                                            </span>
                                        }
                                    </label>
                                    <textarea id="commitMessage" class="commit-message-input" @bind="_commitMessage"
                                        @bind:event="oninput" placeholder="Enter a descriptive commit message..." rows="3"
                                        disabled="@_isPushing"></textarea>
                                </div>

                                <div class="d-flex align-items-center gap-3 flex-wrap">
                                    <button class="btn btn-primary" @onclick="CommitAndPushChanges" disabled="@(!CanPush)">
                                        @if (_isPushing)
                                        {
                                            <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                                            @_pushStatus
                                        }
                                        else
                                        {
                                            <text>Commit & Push</text>
                                        }
                                    </button>

                                    @if (!string.IsNullOrEmpty(_branchName))
                                    {
                                        <span class="branch-info">
                                            <span class="branch-icon">üåø</span>
                                            @_branchName
                                        </span>
                                    }
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(_pushError))
                            {
                                <div class="push-error mt-3">
                                    <span class="error-icon">‚ùå</span>
                                    @_pushError
                                </div>
                            }
                        }
                        else
                        {
                            <div class="push-success">
                                <span class="success-icon fs-4">‚úÖ</span>
                                <div class="success-details">
                                    <strong>Changes pushed successfully!</strong>
                                    @if (!string.IsNullOrEmpty(_pushedCommitHash))
                                    {
                                        <span class="commit-hash">Commit: @_pushedCommitHash[..Math.Min(7, _pushedCommitHash.Length)]</span>
                                    }
                                    @if (!string.IsNullOrEmpty(_branchName))
                                    {
                                        <span class="branch-pushed">Branch: @_branchName</span>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
            else if (!IsJobActive && Job.Status == JobStatus.Completed && string.IsNullOrEmpty(Job.GitDiff))
            {
                <div class="card shadow-sm">
                    <div class="card-body">
                        <p class="text-muted mb-0 text-center">No file changes detected during this job.</p>
                    </div>
                </div>
            }
        </div>

        <div class="col-lg-7">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">Conversation (@Job.Messages.Count messages)</h5>
                </div>
                <div class="card-body">
                    @if (Job.Status == JobStatus.Started || Job.Status == JobStatus.Processing)
                    {
                        <div class="activity-indicator mb-3">
                            <span class="activity-spinner"></span>
                            <span class="activity-text">@(Job.CurrentActivity ?? "Working...")</span>
                            @if (Job.LastActivityAt.HasValue)
                            {
                                <span class="activity-time">@Job.LastActivityAt.Value.ToLocalTime().ToString("HH:mm:ss")</span>
                            }
                        </div>
                    }

                    @if (!Job.Messages.Any())
                    {
                        <div class="empty-state">
                            @if (Job.Status == JobStatus.New || Job.Status == JobStatus.Pending)
                            {
                                <text>Job is waiting to be processed...</text>
                            }
                            else if (Job.Status == JobStatus.Started || Job.Status == JobStatus.Processing)
                            {
                                <text>Agent is working on the task...</text>
                            }
                            else
                            {
                                <text>No conversation messages recorded.</text>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="messages-container">
                            @foreach (var message in Job.Messages)
                            {
                                <div class="message message-@message.Role.ToString().ToLower()">
                                    <div class="message-header">
                                        <span class="message-role">@GetRoleDisplayName(message.Role)</span>
                                        <span class="message-time">@message.CreatedAt.ToLocalTime().ToString("HH:mm:ss")</span>
                                    </div>
                                    <div class="message-content">
                                        @if (message.Role == MessageRole.ToolUse)
                                        {
                                            <div class="tool-info">
                                                <strong>Tool:</strong> @message.ToolName
                                                @if (!string.IsNullOrEmpty(message.ToolInput))
                                                {
                                                    <pre class="tool-input">@message.ToolInput</pre>
                                                }
                                            </div>
                                        }
                                        else if (message.Role == MessageRole.ToolResult)
                                        {
                                            <div class="tool-info">
                                                <strong>Result from:</strong> @message.ToolName
                                                <pre class="tool-output">@TruncateOutput(message.ToolOutput ?? message.Content, 500)</pre>
                                            </div>
                                        }
                                        else
                                        {
                                            <pre class="message-text">@message.Content</pre>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="alert alert-danger mt-3">@ErrorMessage</div>
    }

    @if (!string.IsNullOrEmpty(SuccessMessage))
    {
        <div class="alert alert-success mt-3">@SuccessMessage</div>
    }
}

@code {
    [Parameter]
    public Guid JobId { get; set; }

    private Job? Job { get; set; }
    private bool IsLoading { get; set; } = true;
    private bool IsCancelling { get; set; }
    private bool IsForceCancelling { get; set; }
    private bool IsRetrying { get; set; }
    private string? ErrorMessage { get; set; }
    private string? SuccessMessage { get; set; }
    private DotNetObjectReference<JobDetail>? _dotNetReference;
    private IJSObjectReference? _signalRModule;
    private Timer? _refreshTimer;
    private bool _isRefreshing = false;
    private DateTime _pageLoadTime = DateTime.UtcNow;
    private ElementReference _outputContainer;

    // Toggle states for collapsible sections
    private bool _showConsoleOutput = false;
    private bool _showGitDiff = true; // Show by default since it's usually the most interesting part

    // Live output buffer
    private const int MaxOutputLines = 500;
    private readonly List<OutputLine> _liveOutput = new();

    // Commit and push state
    private string _commitMessage = string.Empty;
    private bool _isPushing = false;
    private string _pushStatus = "Pushing...";
    private string? _pushError = null;
    private bool _changesPushed = false;
    private string? _pushedCommitHash = null;
    private string? _branchName = null;
    private CancellationTokenSource? _pushCancellationTokenSource;
    private const int PushTimeoutSeconds = 120;
    private bool _commitMessageInitialized = false;

    private class OutputLine
    {
        public string Content { get; set; } = string.Empty;
        public bool IsError { get; set; }
        public DateTime Timestamp { get; set; }
    }

    private bool CanCancel => Job != null &&
        (Job.Status == JobStatus.New ||
        Job.Status == JobStatus.Pending ||
        Job.Status == JobStatus.Started ||
        Job.Status == JobStatus.Processing) &&
        !Job.CancellationRequested;

    // Force cancel is available when cancellation was requested but job is still running
    private bool CanForceCancel => Job != null &&
        (Job.Status == JobStatus.Started || Job.Status == JobStatus.Processing) &&
        Job.CancellationRequested;

    private bool CanRetry => Job != null &&
        (Job.Status == JobStatus.Cancelled ||
        Job.Status == JobStatus.Failed ||
        Job.Status == JobStatus.Completed);

    private bool IsJobActive => Job != null &&
        (Job.Status == JobStatus.New ||
        Job.Status == JobStatus.Pending ||
        Job.Status == JobStatus.Started ||
        Job.Status == JobStatus.Processing);

    private bool CanPush => !_isPushing &&
        !string.IsNullOrWhiteSpace(_commitMessage) &&
        !_changesPushed &&
        Job?.Project?.WorkingPath != null;

    protected override async Task OnInitializedAsync()
    {
        await LoadJob();
        StartAutoRefresh();
        await LoadBranchName();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await InitializeSignalR();
            // Refresh job after SignalR is connected in case status changed during page load
            await Task.Delay(500);
            await RefreshJobSafely();
        }
    }

    private void StartAutoRefresh()
    {
        // SignalR handles real-time updates, this is just a fallback for connection issues
        // Poll every 3 seconds when job is active, every 10 seconds otherwise
        _refreshTimer = new Timer(async _ =>
        {
            var secondsSincePageLoad = (DateTime.UtcNow - _pageLoadTime).TotalSeconds;
            var shouldPoll = secondsSincePageLoad < 10 || IsJobActive;

            if (shouldPoll && !_isRefreshing)
            {
                await InvokeAsync(async () =>
                {
                    await RefreshJobSafely();
                });
            }
        }, null, TimeSpan.FromSeconds(3), TimeSpan.FromSeconds(3));
    }

    private async Task RefreshJobSafely()
    {
        // Prevent overlapping refreshes that could hammer the database
        if (_isRefreshing) return;

        try
        {
            _isRefreshing = true;
            await LoadJob();
            StateHasChanged();
        }
        finally
        {
            _isRefreshing = false;
        }
    }

    private async Task InitializeSignalR()
    {
        try
        {
            _dotNetReference = DotNetObjectReference.Create(this);
            _signalRModule = await JSRuntime.InvokeAsync<IJSObjectReference>("import", "/js/jobSignalR.js");
            await _signalRModule.InvokeVoidAsync("initializeJobHub", JobId.ToString(), _dotNetReference);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error initializing SignalR: {ex.Message}");
        }
    }

    [JSInvokable]
    public async Task OnJobStatusChanged(string jobId, string status)
    {
        Console.WriteLine($"[Blazor] OnJobStatusChanged: {jobId} -> {status}");

        // Update status in-place for immediate UI feedback
        if (Job != null && Enum.TryParse<JobStatus>(status, out var newStatus))
        {
            Job.Status = newStatus;
            if (newStatus == JobStatus.Started)
            {
                Job.StartedAt = DateTime.UtcNow;
            }
            else if (newStatus == JobStatus.Completed || newStatus == JobStatus.Failed || newStatus == JobStatus.Cancelled)
            {
                Job.CompletedAt = DateTime.UtcNow;
            }
            await InvokeAsync(StateHasChanged);
        }

        // Also do a background refresh to get full data
        if (!_isRefreshing)
        {
            _ = Task.Run(async () =>
            {
                await Task.Delay(500);
                await InvokeAsync(async () => await RefreshJobSafely());
            });
        }
    }

    [JSInvokable]
    public async Task OnJobActivityUpdated(string jobId, string activity, DateTime timestamp)
    {
        Console.WriteLine($"[Blazor] OnJobActivityUpdated: {jobId} -> {activity}");
        // Update activity in-place without reloading - this is much faster
        if (Job != null)
        {
            Job.CurrentActivity = activity;
            Job.LastActivityAt = timestamp;
            await InvokeAsync(StateHasChanged);
        }
    }

    [JSInvokable]
    public async Task OnJobMessageAdded(string jobId)
    {
        Console.WriteLine($"[Blazor] OnJobMessageAdded: {jobId}");
        // Reload to get new messages
        if (!_isRefreshing)
        {
            await InvokeAsync(async () => await RefreshJobSafely());
        }
    }

    [JSInvokable]
    public async Task OnJobCompleted(string jobId, bool success, string? errorMessage)
    {
        Console.WriteLine($"[Blazor] OnJobCompleted: {jobId}, success: {success}");
        // Reload to get final status and results
        if (!_isRefreshing)
        {
            await InvokeAsync(async () => await RefreshJobSafely());
        }
    }

    [JSInvokable]
    public async Task OnJobOutput(string jobId, string line, bool isError, DateTime timestamp)
    {
        // Add output line to buffer
        lock (_liveOutput)
        {
            _liveOutput.Add(new OutputLine
            {
                Content = line,
                IsError = isError,
                Timestamp = timestamp
            });

            // Trim buffer if too large
            while (_liveOutput.Count > MaxOutputLines)
            {
                _liveOutput.RemoveAt(0);
            }
        }

        await InvokeAsync(async () =>
        {
            StateHasChanged();
            // Auto-scroll to bottom
            await ScrollToOutputBottom();
        });
    }

    [JSInvokable]
    public async Task OnProcessStarted(string jobId, int processId, string command)
    {
        Console.WriteLine($"[Blazor] OnProcessStarted: {jobId}, PID: {processId}");
        if (Job != null)
        {
            Job.ProcessId = processId;
            await InvokeAsync(StateHasChanged);
        }
    }

    [JSInvokable]
    public async Task OnProcessExited(string jobId, int processId, int exitCode, double durationSeconds)
    {
        Console.WriteLine($"[Blazor] OnProcessExited: {jobId}, PID: {processId}, ExitCode: {exitCode}");
        // Add a marker line in the output
        lock (_liveOutput)
        {
            _liveOutput.Add(new OutputLine
            {
                Content = $"--- Process {processId} exited with code {exitCode} (ran for {durationSeconds:F1}s) ---",
                IsError = exitCode != 0,
                Timestamp = DateTime.UtcNow
            });
        }
        await InvokeAsync(StateHasChanged);
    }

    private async Task ScrollToOutputBottom()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("scrollToBottom", _outputContainer);
        }
        catch
        {
            // Ignore scroll errors
        }
    }

    private void ClearLiveOutput()
    {
        lock (_liveOutput)
        {
            _liveOutput.Clear();
        }
    }

    private async Task LoadJob()
    {
        try
        {
            Job = await JobService.GetByIdWithMessagesAsync(JobId);

            // Pre-populate commit message from session summary if available and not already set
            if (!_commitMessageInitialized && Job != null && !string.IsNullOrWhiteSpace(Job.SessionSummary))
            {
                _commitMessage = Job.SessionSummary;
                _commitMessageInitialized = true;
            }
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task CancelJob()
    {
        if (Job == null) return;

        IsCancelling = true;
        ErrorMessage = null;
        SuccessMessage = null;

        try
        {
            var result = await JobService.RequestCancellationAsync(Job.Id);
            if (result)
            {
                SuccessMessage = "Cancellation requested. The job will be cancelled shortly.";
                await LoadJob();
            }
            else
            {
                ErrorMessage = "Could not cancel the job. It may have already completed.";
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error cancelling job: {ex.Message}";
        }
        finally
        {
            IsCancelling = false;
        }
    }

    private async Task ForceCancelJob()
    {
        if (Job == null) return;

        IsForceCancelling = true;
        ErrorMessage = null;
        SuccessMessage = null;

        try
        {
            var result = await JobService.ForceCancelAsync(Job.Id);
            if (result)
            {
                SuccessMessage = "Job has been force-cancelled.";
                await LoadJob();
            }
            else
            {
                ErrorMessage = "Could not force-cancel the job. It may have already completed.";
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error force-cancelling job: {ex.Message}";
        }
        finally
        {
            IsForceCancelling = false;
        }
    }

    private async Task RetryJob()
    {
        if (Job == null) return;

        IsRetrying = true;
        ErrorMessage = null;
        SuccessMessage = null;

        try
        {
            var result = await JobService.ResetJobAsync(Job.Id);
            if (result)
            {
                SuccessMessage = "Job has been reset and will be retried shortly.";
                await LoadJob();
            }
            else
            {
                ErrorMessage = "Could not retry the job. It may not be in a terminal state.";
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error retrying job: {ex.Message}";
        }
        finally
        {
            IsRetrying = false;
        }
    }

