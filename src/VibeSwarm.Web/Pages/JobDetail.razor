    private async Task CommitAndPushChanges()
    {
        if (Job?.Project?.WorkingPath == null || string.IsNullOrWhiteSpace(_commitMessage))
            return;

        _isPushing = true;
        _pushError = null;
        _pushStatus = "Checking for changes...";
        StateHasChanged();

        _pushCancellationTokenSource?.Cancel();
        _pushCancellationTokenSource = new CancellationTokenSource(TimeSpan.FromSeconds(PushTimeoutSeconds));

        try
        {
            var result = await GitHelper.CommitAndPushAsync(
                Job.Project.WorkingPath,
                _commitMessage,
                "origin",
                status =>
                {
                    _pushStatus = status;
                    InvokeAsync(StateHasChanged);
                },
                _pushCancellationTokenSource.Token);

            if (result.Success)
            {
                _changesPushed = true;
                _pushedCommitHash = result.CommitHash;
                _branchName = result.BranchName ?? _branchName;
                SuccessMessage = "Changes committed and pushed successfully!";
            }
            else
            {
                _pushError = result.Error ?? "An unknown error occurred";
            }
        }
        catch (OperationCanceledException)
        {
            _pushError = "Push operation timed out. Please check your network connection and try again.";
        }
        catch (Exception ex)
        {
            _pushError = $"Unexpected error: {ex.Message}";
        }
        finally
        {
            _isPushing = false;
            _pushStatus = "Pushing...";
            StateHasChanged();
        }
    }

    /// <summary>
    /// Formats git diff output with syntax highlighting for HTML display
    /// </summary>
    private static string FormatGitDiff(string diff)
    {
        if (string.IsNullOrEmpty(diff))
            return string.Empty;

        var lines = diff.Split('\n');
        var result = new System.Text.StringBuilder();

        foreach (var line in lines)
        {
            var escapedLine = System.Net.WebUtility.HtmlEncode(line);

            if (line.StartsWith("+++") || line.StartsWith("---"))
            {
                result.AppendLine($"<div class=\"diff-file-header\">{escapedLine}</div>");
            }
            else if (line.StartsWith("@@"))
            {
                result.AppendLine($"<div class=\"diff-hunk-header\">{escapedLine}</div>");
            }
            else if (line.StartsWith("+") && !line.StartsWith("+++"))
            {
                result.AppendLine($"<div class=\"diff-added\">{escapedLine}</div>");
            }
            else if (line.StartsWith("-") && !line.StartsWith("---"))
            {
                result.AppendLine($"<div class=\"diff-removed\">{escapedLine}</div>");
            }
            else if (line.StartsWith("diff "))
            {
                result.AppendLine($"<div class=\"diff-header\">{escapedLine}</div>");
            }
            else if (line.StartsWith("index ") || line.StartsWith("new file") || line.StartsWith("deleted file"))
            {
                result.AppendLine($"<div class=\"diff-meta\">{escapedLine}</div>");
            }
            else
            {
                result.AppendLine($"<div class=\"diff-context\">{escapedLine}</div>");
            }
        }

        return result.ToString();
    }

