    [JSInvokable]
    public async Task OnJobCompleted(string jobId, bool success, string? errorMessage)
    {
        Console.WriteLine($"[Blazor] OnJobCompleted: {jobId}, success: {success}");

        // Immediately update status in-place for instant UI feedback
        if (Job != null)
        {
            Job.Status = success ? JobStatus.Completed : JobStatus.Failed;
            Job.CompletedAt = DateTime.UtcNow;
            if (!string.IsNullOrEmpty(errorMessage))
            {
                Job.ErrorMessage = errorMessage;
            }

            // Show loading indicator for git diff section while we wait for it to be captured
            if (success)
            {
                _isLoadingGitDiff = true;
            }
            await InvokeAsync(StateHasChanged);
        }

        // Wait a moment for the git diff to be captured in the database
        // The job completion saves the git diff, but there may be a small delay
        await Task.Delay(1500);

        // Also do a full refresh to get complete data (git diff, etc.)
        if (!_isRefreshing)
        {
            await InvokeAsync(async () =>
            {
                await RefreshJobSafely();

                // If still no git diff after refresh, try fetching it directly
                if (Job != null && string.IsNullOrEmpty(Job.GitDiff) && _isLoadingGitDiff)
                {
                    // Give it one more try after an additional delay
                    await Task.Delay(1000);
                    await RefreshJobSafely();
                }

                // Clear loading state after we've attempted to get the data
                _isLoadingGitDiff = false;
                StateHasChanged();
            });
        }
        else
        {
            // If we couldn't refresh, still clear loading state after a timeout
            await Task.Delay(3000);
            _isLoadingGitDiff = false;
            await InvokeAsync(StateHasChanged);
        }
    }

