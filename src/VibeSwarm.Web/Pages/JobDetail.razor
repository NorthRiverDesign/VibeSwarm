@page "/jobs/{JobId:guid}"
@inject IJobService JobService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@implements IAsyncDisposable
@using System.Threading

@if (IsLoading)
{
    <p>Loading job...</p>
}
else if (Job == null)
{
    <p>Job not found.</p>
    <a href="/projects">Back to Projects</a>
}
else
{
    <div class="job-header">
        <div>
            <h3>Job Details</h3>
            <div class="job-status-section">
                <div class="status-badge-container">
                    <span class="status-badge status-@Job.Status.ToString().ToLower()">
                        @if (Job.Status == JobStatus.Started || Job.Status == JobStatus.Processing)
                        {
                            <span class="status-spinner"></span>
                        }
                        @Job.Status
                    </span>
                    @if (Job.CancellationRequested && (Job.Status == JobStatus.Started || Job.Status ==
                                    JobStatus.Processing))
                    {
                        <span class="status-badge status-cancelling">
                            <span class="status-spinner"></span>
                            Cancelling
                        </span>
                    }
                </div>
                <p class="job-meta">
                    <span>Project: <a href="/projects/@Job.ProjectId">@(Job.Project?.Name ?? "Unknown")</a></span>
                    <span>Provider: @(Job.Provider?.Name ?? "Unknown")</span>
                </p>
            </div>
        </div>
        <div class="job-header-actions">
            @if (CanRetry)
            {
                <button class="btn btn-primary" @onclick="RetryJob" disabled="@IsRetrying">
                    @(IsRetrying ? "Resetting..." : "Retry Job")
                </button>
            }
            @if (CanCancel)
            {
                <button class="btn btn-danger" @onclick="CancelJob" disabled="@IsCancelling">
                    @if (IsCancelling)
                    {
                        <span class="spinner-small"></span>
                        <text>Cancelling...</text>
                    }
                    else
                    {
                        <text>Cancel Job</text>
                    }
                </button>
            }
            @if (CanForceCancel)
            {
                <button class="btn btn-danger-outline" @onclick="ForceCancelJob" disabled="@IsForceCancelling">
                    @if (IsForceCancelling)
                    {
                        <span class="spinner-small"></span>
                        <text>Force Cancelling...</text>
                    }
                    else
                    {
                        <text>Force Cancel</text>
                    }
                </button>
            }
            <a href="/projects/@Job.ProjectId" class="btn btn-secondary">Back to Project</a>
        </div>
    </div>

    <div class="job-detail-container">
        <div class="job-info-section">
            <h4>Goal Prompt</h4>
            <div class="goal-prompt-box">
                @Job.GoalPrompt
            </div>

            <div class="job-stats">
                @if (Job.SessionId != null)
                {
                    <div class="stat-item">
                        <span class="stat-label">Session ID</span>
                        <span class="stat-value mono">@Job.SessionId</span>
                    </div>
                }
                @if (Job.InputTokens.HasValue)
                {
                    <div class="stat-item">
                        <span class="stat-label">Input Tokens</span>
                        <span class="stat-value">@Job.InputTokens.Value.ToString("N0")</span>
                    </div>
                }
                @if (Job.OutputTokens.HasValue)
                {
                    <div class="stat-item">
                        <span class="stat-label">Output Tokens</span>
                        <span class="stat-value">@Job.OutputTokens.Value.ToString("N0")</span>
                    </div>
                }
                @if (Job.TotalCostUsd.HasValue)
                {
                    <div class="stat-item">
                        <span class="stat-label">Cost</span>
                        <span class="stat-value">$@Job.TotalCostUsd.Value.ToString("F4")</span>
                    </div>
                }
                <div class="stat-item">
                    <span class="stat-label">Created</span>
                    <span class="stat-value">@Job.CreatedAt.ToLocalTime().ToString("g")</span>
                </div>
                @if (Job.StartedAt.HasValue)
                {
                    <div class="stat-item">
                        <span class="stat-label">Started</span>
                        <span class="stat-value">@Job.StartedAt.Value.ToLocalTime().ToString("g")</span>
                    </div>
                }
                @if (Job.CompletedAt.HasValue)
                {
                    <div class="stat-item">
                        <span class="stat-label">Completed</span>
                        <span class="stat-value">@Job.CompletedAt.Value.ToLocalTime().ToString("g")</span>
                    </div>
                }
            </div>

            @if (!string.IsNullOrEmpty(Job.ErrorMessage))
            {
                <div class="error-section">
                    <h5>Error</h5>
                    <pre class="error-output">@Job.ErrorMessage</pre>
                </div>
            }

            @if (Job.Status == JobStatus.Cancelled)
            {
                <div class="info-section">
                    <h5>Job Cancelled</h5>
                    <p>This job was cancelled and can be retried. Click "Retry Job" to run it again.</p>
                </div>
            }
            else if (Job.Status == JobStatus.Failed && CanRetry)
            {
                <div class="info-section">
                    <h5>Job Failed</h5>
                    <p>This job failed during execution. You can retry it by clicking "Retry Job" above.</p>
                </div>
            }
        </div>

        <div class="job-messages-section">
            <h4>Conversation (@Job.Messages.Count messages)</h4>

            @if (Job.Status == JobStatus.Started || Job.Status == JobStatus.Processing)
            {
                <div class="activity-indicator">
                    <span class="activity-spinner"></span>
                    <span class="activity-text">@(Job.CurrentActivity ?? "Working...")</span>
                    @if (Job.LastActivityAt.HasValue)
                    {
                        <span class="activity-time">@Job.LastActivityAt.Value.ToLocalTime().ToString("HH:mm:ss")</span>
                    }
                </div>
            }

            @if (!Job.Messages.Any())
            {
                <p class="empty-state">
                    @if (Job.Status == JobStatus.New || Job.Status == JobStatus.Pending)
                    {
                        <text>Job is waiting to be processed...</text>
                    }
                    else if (Job.Status == JobStatus.Started || Job.Status == JobStatus.Processing)
                    {
                        <text>Agent is working on the task...</text>
                    }
                    else
                    {
                        <text>No conversation messages recorded.</text>
                    }
                </p>
            }
            else
            {
                <div class="messages-container">
                    @foreach (var message in Job.Messages)
                    {
                        <div class="message message-@message.Role.ToString().ToLower()">
                            <div class="message-header">
                                <span class="message-role">@GetRoleDisplayName(message.Role)</span>
                                <span class="message-time">@message.CreatedAt.ToLocalTime().ToString("HH:mm:ss")</span>
                            </div>
                            <div class="message-content">
                                @if (message.Role == MessageRole.ToolUse)
                                {
                                    <div class="tool-info">
                                        <strong>Tool:</strong> @message.ToolName
                                        @if (!string.IsNullOrEmpty(message.ToolInput))
                                        {
                                            <pre class="tool-input">@message.ToolInput</pre>
                                        }
                                    </div>
                                }
                                else if (message.Role == MessageRole.ToolResult)
                                {
                                    <div class="tool-info">
                                        <strong>Result from:</strong> @message.ToolName
                                        <pre class="tool-output">@TruncateOutput(message.ToolOutput ?? message.Content, 500)</pre>
                                    </div>
                                }
                                else
                                {
                                    <pre class="message-text">@message.Content</pre>
                                }
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>

    @if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="alert alert-error">@ErrorMessage</div>
    }

    @if (!string.IsNullOrEmpty(SuccessMessage))
    {
        <div class="alert alert-success">@SuccessMessage</div>
    }
}

@code {
    [Parameter]
    public Guid JobId { get; set; }

    private Job? Job { get; set; }
    private bool IsLoading { get; set; } = true;
    private bool IsCancelling { get; set; }
    private bool IsForceCancelling { get; set; }
    private bool IsRetrying { get; set; }
    private string? ErrorMessage { get; set; }
    private string? SuccessMessage { get; set; }
    private DotNetObjectReference<JobDetail>? _dotNetReference;
    private IJSObjectReference? _signalRModule;
    private Timer? _refreshTimer;
    private bool _isRefreshing = false;
    private DateTime _pageLoadTime = DateTime.UtcNow;

    private bool CanCancel => Job != null &&
    (Job.Status == JobStatus.New ||
    Job.Status == JobStatus.Pending ||
    Job.Status == JobStatus.Started ||
    Job.Status == JobStatus.Processing) &&
    !Job.CancellationRequested;

    // Force cancel is available when cancellation was requested but job is still running
    private bool CanForceCancel => Job != null &&
    (Job.Status == JobStatus.Started || Job.Status == JobStatus.Processing) &&
    Job.CancellationRequested;

    private bool CanRetry => Job != null &&
    (Job.Status == JobStatus.Cancelled ||
    Job.Status == JobStatus.Failed ||
    Job.Status == JobStatus.Completed);

    private bool IsJobActive => Job != null &&
    (Job.Status == JobStatus.New ||
    Job.Status == JobStatus.Pending ||
    Job.Status == JobStatus.Started ||
    Job.Status == JobStatus.Processing);

    protected override async Task OnInitializedAsync()
    {
        await LoadJob();
        StartAutoRefresh();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await InitializeSignalR();
            // Refresh job after SignalR is connected in case status changed during page load
            await Task.Delay(500);
            await RefreshJobSafely();
        }
    }

    private void StartAutoRefresh()
    {
        // Poll aggressively for the first 30 seconds, then only when job is active
        _refreshTimer = new Timer(async _ =>
        {
            var secondsSincePageLoad = (DateTime.UtcNow - _pageLoadTime).TotalSeconds;
            var shouldPoll = secondsSincePageLoad < 30 || IsJobActive;

            if (shouldPoll && !_isRefreshing)
            {
                await InvokeAsync(async () =>
        {
            await RefreshJobSafely();
        });
            }
        }, null, TimeSpan.FromMilliseconds(500), TimeSpan.FromMilliseconds(500));
    }

    private async Task RefreshJobSafely()
    {
        // Prevent overlapping refreshes that could hammer the database
        if (_isRefreshing) return;

        try
        {
            _isRefreshing = true;
            await LoadJob();
            StateHasChanged();
        }
        finally
        {
            _isRefreshing = false;
        }
    }

    private async Task InitializeSignalR()
    {
        try
        {
            _dotNetReference = DotNetObjectReference.Create(this);
            _signalRModule = await JSRuntime.InvokeAsync<IJSObjectReference>("import", "/js/jobSignalR.js");
            await _signalRModule.InvokeVoidAsync("initializeJobHub", JobId.ToString(), _dotNetReference);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error initializing SignalR: {ex.Message}");
        }
    }

    [JSInvokable]
    public async Task OnJobStatusChanged(string jobId, string status)
    {
        Console.WriteLine($"[Blazor] OnJobStatusChanged: {jobId} -> {status}");
        // Reload job to get the new status and timestamps
        if (!_isRefreshing)
        {
            await InvokeAsync(async () => await RefreshJobSafely());
        }
    }

    [JSInvokable]
    public async Task OnJobActivityUpdated(string jobId, string activity, DateTime timestamp)
    {
        Console.WriteLine($"[Blazor] OnJobActivityUpdated: {jobId} -> {activity}");
        // Update activity in-place without reloading - this is much faster
        if (Job != null)
        {
            Job.CurrentActivity = activity;
            Job.LastActivityAt = timestamp;
            await InvokeAsync(StateHasChanged);
        }
    }

    [JSInvokable]
    public async Task OnJobMessageAdded(string jobId)
    {
        Console.WriteLine($"[Blazor] OnJobMessageAdded: {jobId}");
        // Reload to get new messages
        if (!_isRefreshing)
        {
            await InvokeAsync(async () => await RefreshJobSafely());
        }
    }

    [JSInvokable]
    public async Task OnJobCompleted(string jobId, bool success, string? errorMessage)
    {
        Console.WriteLine($"[Blazor] OnJobCompleted: {jobId}, success: {success}");
        // Reload to get final status and results
        if (!_isRefreshing)
        {
            await InvokeAsync(async () => await RefreshJobSafely());
        }
    }

    private async Task LoadJob()
    {
        try
        {
            Job = await JobService.GetByIdWithMessagesAsync(JobId);
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task CancelJob()
    {
        if (Job == null) return;

        IsCancelling = true;
        ErrorMessage = null;
        SuccessMessage = null;

        try
        {
            var result = await JobService.RequestCancellationAsync(Job.Id);
            if (result)
            {
                SuccessMessage = "Cancellation requested. The job will be cancelled shortly.";
                await LoadJob();
            }
            else
            {
                ErrorMessage = "Could not cancel the job. It may have already completed.";
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error cancelling job: {ex.Message}";
        }
        finally
        {
            IsCancelling = false;
        }
    }

    private async Task ForceCancelJob()
    {
        if (Job == null) return;

        IsForceCancelling = true;
        ErrorMessage = null;
        SuccessMessage = null;

        try
        {
            var result = await JobService.ForceCancelAsync(Job.Id);
            if (result)
            {
                SuccessMessage = "Job has been force-cancelled.";
                await LoadJob();
            }
            else
            {
                ErrorMessage = "Could not force-cancel the job. It may have already completed.";
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error force-cancelling job: {ex.Message}";
        }
        finally
        {
            IsForceCancelling = false;
        }
    }

    private async Task RetryJob()
    {
        if (Job == null) return;

        IsRetrying = true;
        ErrorMessage = null;
        SuccessMessage = null;

        try
        {
            var result = await JobService.ResetJobAsync(Job.Id);
            if (result)
            {
                SuccessMessage = "Job has been reset and will be retried shortly.";
                await LoadJob();
            }
            else
            {
                ErrorMessage = "Could not retry the job. It may not be in a terminal state.";
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error retrying job: {ex.Message}";
        }
        finally
        {
            IsRetrying = false;
        }
    }

    private static string GetRoleDisplayName(MessageRole role)
    {
        return role switch
        {
            MessageRole.User => "User",
            MessageRole.Assistant => "Assistant",
            MessageRole.System => "System",
            MessageRole.ToolUse => "Tool Call",
            MessageRole.ToolResult => "Tool Result",
            _ => role.ToString()
        };
    }

    private static string TruncateOutput(string text, int maxLength)
    {
        if (string.IsNullOrEmpty(text) || text.Length <= maxLength)
            return text;
        return text[..maxLength] + "\n... (truncated)";
    }

    public async ValueTask DisposeAsync()
    {
        _refreshTimer?.Dispose();

        if (_signalRModule != null)
        {
            try
            {
                await _signalRModule.InvokeVoidAsync("disposeJobHub");
                await _signalRModule.DisposeAsync();
            }
            catch { }
        }

        _dotNetReference?.Dispose();
    }
}