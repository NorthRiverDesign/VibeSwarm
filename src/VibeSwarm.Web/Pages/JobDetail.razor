            await RefreshJobSafely();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error checking git diff: {ex.Message}");
            ErrorMessage = $"Error checking git changes: {ex.Message}";
        }
        finally
        {
            _isCheckingGitDiff = false;
            StateHasChanged();
        }
    }

    private async Task CommitAndPushChanges()
    {
        if (Job?.Project?.WorkingPath == null || string.IsNullOrWhiteSpace(_commitMessage))
            return;

        _isPushing = true;
        _pushError = null;
        _pushStatus = "Checking for changes...";
        StateHasChanged();

        _pushCancellationTokenSource?.Cancel();
        _pushCancellationTokenSource = new CancellationTokenSource(TimeSpan.FromSeconds(PushTimeoutSeconds));

        try
        {
            var result = await VersionControlService.CommitAndPushAsync(
            Job.Project.WorkingPath,
            _commitMessage,
            "origin",
            status =>
            {
                _pushStatus = status;
                InvokeAsync(StateHasChanged);
            },
            _pushCancellationTokenSource.Token);

            if (result.Success)
            {
                _changesPushed = true;
                _pushedCommitHash = result.CommitHash;
                _branchName = result.BranchName ?? _branchName;
                SuccessMessage = "Changes committed and pushed successfully!";

                // Save the commit hash to the database
                if (!string.IsNullOrEmpty(result.CommitHash) && Job != null)
                {
                    await JobService.UpdateGitCommitHashAsync(Job.Id, result.CommitHash);
                    Job.GitCommitHash = result.CommitHash;
                }
            }
            else
            {
                _pushError = result.Error ?? "An unknown error occurred";
            }
        }
        catch (OperationCanceledException)
        {
            _pushError = "Push operation timed out. Please check your network connection and try again.";
        }
        catch (Exception ex)
        {
            _pushError = $"Unexpected error: {ex.Message}";
        }
        finally
        {
            _isPushing = false;
            _pushStatus = "Pushing...";
            StateHasChanged();
        }
    }

    /// <summary>
    /// Formats git diff output with syntax highlighting for HTML display
    /// </summary>
    private static string FormatGitDiff(string diff)
    {
        if (string.IsNullOrEmpty(diff))
            return string.Empty;

        var lines = diff.Split('\n');
        var result = new System.Text.StringBuilder();

        foreach (var line in lines)
        {
            var escapedLine = System.Net.WebUtility.HtmlEncode(line);

            if (line.StartsWith("+++") || line.StartsWith("---"))
            {
                result.AppendLine($"<div class=\"diff-file-header\">{escapedLine}</div>");
            }
            else if (line.StartsWith("@@"))
            {
                result.AppendLine($"<div class=\"diff-hunk-header\">{escapedLine}</div>");
            }
            else if (line.StartsWith("+") && !line.StartsWith("+++"))
            {
                result.AppendLine($"<div class=\"diff-added\">{escapedLine}</div>");
            }
            else if (line.StartsWith("-") && !line.StartsWith("---"))
            {
                result.AppendLine($"<div class=\"diff-removed\">{escapedLine}</div>");
            }
            else if (line.StartsWith("diff "))
            {
                result.AppendLine($"<div class=\"diff-header\">{escapedLine}</div>");
            }
            else if (line.StartsWith("index ") || line.StartsWith("new file") || line.StartsWith("deleted file"))
            {
                result.AppendLine($"<div class=\"diff-meta\">{escapedLine}</div>");
            }
            else
            {
                result.AppendLine($"<div class=\"diff-context\">{escapedLine}</div>");
            }
        }

        return result.ToString();
    }

    /// <summary>
    /// Parses git diff into individual file diffs
    /// </summary>
    private static List<DiffFile> ParseGitDiff(string diff)
    {
        var files = new List<DiffFile>();
        if (string.IsNullOrEmpty(diff))
            return files;

        var lines = diff.Split('\n');
        DiffFile? currentFile = null;
        var currentContent = new System.Text.StringBuilder();

        foreach (var line in lines)
        {
            if (line.StartsWith("diff --git"))
            {
                // Save previous file
                if (currentFile != null)
                {
                    currentFile.DiffContent = currentContent.ToString();
                    files.Add(currentFile);
                }

                // Extract filename from "diff --git a/path/to/file b/path/to/file"
                var parts = line.Split(' ');
                var fileName = parts.Length >= 4 ? parts[3].TrimStart('b', '/') : "unknown";

                currentFile = new DiffFile { FileName = fileName };
                currentContent.Clear();
                currentContent.AppendLine(line);
            }
            else if (currentFile != null)
            {
                currentContent.AppendLine(line);

                if (line.StartsWith("new file"))
                {
                    currentFile.IsNew = true;
                }
                else if (line.StartsWith("deleted file"))
                {
                    currentFile.IsDeleted = true;
                }
                else if (line.StartsWith("+") && !line.StartsWith("+++"))
                {
                    currentFile.Additions++;
                }
                else if (line.StartsWith("-") && !line.StartsWith("---"))
                {
                    currentFile.Deletions++;
                }
            }
        }

        // Save the last file
        if (currentFile != null)
        {
            currentFile.DiffContent = currentContent.ToString();
            files.Add(currentFile);
        }

        return files;
    }

    /// <summary>
    /// Formats a single file's diff content with syntax highlighting
    /// </summary>
    private static string FormatFileDiff(string diff)
    {
        return FormatGitDiff(diff);
    }

