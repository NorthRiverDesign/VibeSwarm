    {
        if (_expandedUncommittedDiffFiles.Contains(index))
            _expandedUncommittedDiffFiles.Remove(index);
        else
            _expandedUncommittedDiffFiles.Add(index);
    }

    private void ExpandAllUncommittedDiffs()
    {
        _expandedUncommittedDiffFiles = Enumerable.Range(0, _uncommittedDiffFiles.Count).ToHashSet();
    }

    private void CollapseAllUncommittedDiffs()
    {
        _expandedUncommittedDiffFiles = new HashSet<int>();
    }

    private async Task CommitAndPushUncommittedChanges()
    {
        if (string.IsNullOrWhiteSpace(_uncommittedCommitMessage))
            return;

        if (Project == null || string.IsNullOrEmpty(Project.WorkingPath))
            return;

        _isCommittingChanges = true;
        _uncommittedDiffError = null;
        StateHasChanged();

        try
        {
            // Commit all changes
            var commitResult = await VersionControlService.CommitAllChangesAsync(
                Project.WorkingPath,
                _uncommittedCommitMessage.Trim());

            if (!commitResult.Success)
            {
                _uncommittedDiffError = $"Failed to commit: {commitResult.Error}";
                return;
            }

            // Push to origin
            var pushResult = await VersionControlService.PushAsync(Project.WorkingPath);

            if (pushResult.Success)
            {
                GitOperationMessage = "Successfully committed and pushed changes";
                GitOperationSuccess = true;
                CurrentCommitHash = commitResult.CommitHash;
                CloseUncommittedChangesModal();
                await RefreshUncommittedChangesStatus();
            }
            else
            {
                // Commit succeeded but push failed - still close modal but show warning
                GitOperationMessage = $"Changes committed but push failed: {pushResult.Error}";
                GitOperationSuccess = false;
                CloseUncommittedChangesModal();
                await RefreshUncommittedChangesStatus();
            }
        }
        catch (Exception ex)
        {
            _uncommittedDiffError = $"Error: {ex.Message}";
        }
        finally
        {
            _isCommittingChanges = false;
            StateHasChanged();
        }
    }

    private void ShowDiscardConfirmation()
    {
