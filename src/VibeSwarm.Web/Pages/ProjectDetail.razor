@page "/projects/{ProjectId:guid}"
@attribute [Authorize]
@inject IProjectService ProjectService
@inject IJobService JobService
@inject IProviderService ProviderService
@inject IVersionControlService VersionControlService
@inject NavigationManager NavigationManager
@implements IDisposable
@using VibeSwarm.Shared.Utilities
@using VibeSwarm.Shared.VersionControl
@using VibeSwarm.Shared.VersionControl.Models

@if (IsLoading)
{
    <LoadingSpinner />
}
else if (Project == null)
{
    <div class="alert alert-warning">
        <p class="mb-0">Project not found.</p>
    </div>
    <a href="/projects" class="btn btn-secondary">Back to Projects</a>
}
else
{
    @* Project Header *@
            <div class="card mb-3 mb-lg-4 border-0 shadow-sm">
        <div class="card-body p-3 p-md-4">
            @* Top Row: Back Button, Title, Actions *@
                    <div class="d-flex flex-wrap align-items-start gap-2 gap-md-3 mb-3">
                <a href="/projects" class="btn btn-sm btn-outline-secondary flex-shrink-0" title="Back to projects">
                    <i class="bi bi-arrow-left"></i>
                    <span class="d-none d-sm-inline ms-1">Back</span>
                </a>
                <div class="flex-grow-1 min-width-0">
                    <div class="d-flex align-items-center gap-2 flex-wrap">
                        <h3 class="mb-0 fs-4 fw-semibold">@Project.Name</h3>
                        @if (IsGitRepository && !string.IsNullOrEmpty(Project.GitHubRepository))
                        {
                            <a href="https://github.com/@Project.GitHubRepository" target="_blank"
                                class="d-flex align-items-center gap-1 text-body-secondary text-decoration-none small hover-underline"
                                title="View on GitHub">
                                <i class="bi bi-github"></i>
                                <span class="d-none d-md-inline">@Project.GitHubRepository</span>
                            </a>
                        }
                    </div>
                    @if (!string.IsNullOrEmpty(Project.Description))
                    {
                        <p class="text-body-secondary mb-0 mt-1 small d-none d-sm-block">@Project.Description</p>
                    }
                </div>

                @* Git Actions Dropdown (when Git repo) *@
                        @if (IsGitRepository)
                {
                    <div class="dropdown flex-shrink-0">
                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown"
                            aria-expanded="false" disabled="@IsGitOperationInProgress" title="Git actions">
                            <i class="bi bi-git"></i>
                            <span class="d-none d-sm-inline ms-1">Git</span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <button class="dropdown-item" @onclick="ShowCreateBranchModal"
                                    disabled="@IsGitOperationInProgress">
                                    <i class="bi bi-plus-lg me-2 text-primary"></i>New Branch
                                </button>
                            </li>
                            <li>
                                <button class="dropdown-item" @onclick="SyncWithOrigin" disabled="@IsGitOperationInProgress">
                                    @if (IsGitOperationInProgress && _currentGitOperation == "sync")
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-cloud-download me-2 text-success"></i>
                                    }
                                    Sync with Origin
                                </button>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li>
                                <button class="dropdown-item" @onclick="RefreshBranches" disabled="@IsGitOperationInProgress">
                                    <i class="bi bi-arrow-clockwise me-2 @(IsGitOperationInProgress ? "spin" : "")"></i>
                                    Refresh Branches
                                </button>
                            </li>
                        </ul>
                    </div>
                }
            </div>

            @* Second Row: Path, Branch Selector, Stats *@
                    <div class="d-flex flex-wrap align-items-center gap-2 gap-md-3 pt-3 border-top">
                @* Working Path *@
                        <div class="d-flex align-items-center gap-1 text-body-secondary small">
                    <i class="bi bi-folder opacity-75"></i>
                    <code class="bg-body-tertiary px-2 py-1 rounded-1 text-truncate d-inline-block"
                        style="max-width: 240px;" title="@Project.WorkingPath">@Project.WorkingPath</code>
                </div>

                @* Branch Selector (Git repos only) *@
                        @if (IsGitRepository && Branches.Any())
                {
                    <div class="d-flex align-items-center gap-1">
                        <div class="dropdown">
                            <button class="btn btn-sm bg-body-tertiary border d-flex align-items-center gap-2 dropdown-toggle"
                                type="button" data-bs-toggle="dropdown" aria-expanded="false"
                                disabled="@(IsGitOperationInProgress || !Branches.Any())" title="Current branch">
                                <i class="bi bi-git text-danger"></i>
                                <span class="fw-medium">@(CurrentBranch ?? "No branch")</span>
                                @if (!string.IsNullOrEmpty(CurrentCommitHash))
                                {
                                    <span class="font-monospace text-body-secondary small">@CurrentCommitHash[..Math.Min(7,
                                                                    CurrentCommitHash.Length)]</span>
                                                }
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" style="max-height: 300px; overflow-y: auto;">
                                <li>
                                    <h6 class="dropdown-header">Local Branches</h6>
                                </li>
                                @foreach (var branch in Branches.Where(b => !b.IsRemote))
                                {
                                    var isCurrentBranch = branch.Name == CurrentBranch;
                                    <li>
                                        <button
                                            class="dropdown-item d-flex align-items-center gap-2 @(isCurrentBranch ? "active" : "")"
                                            @onclick="@(() => RequestBranchSwitch(branch.Name))" disabled="@isCurrentBranch">
                                            @if (isCurrentBranch)
                                            {
                                                <i class="bi bi-check-lg"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-git opacity-50"></i>
                                            }
                                            <span>@branch.Name</span>
                                        </button>
                                    </li>
                                }
                                @if (Branches.Any(b => b.IsRemote))
                                {
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li>
                                        <h6 class="dropdown-header">Remote Branches</h6>
                                    </li>
                                    @foreach (var branch in Branches.Where(b => b.IsRemote))
                                    {
                                        <li>
                                            <button class="dropdown-item d-flex align-items-center gap-2"
                                                @onclick="@(() => RequestBranchSwitch(branch.ShortName))">
                                                <i class="bi bi-cloud opacity-50"></i>
                                                <span>@branch.Name</span>
                                            </button>
                                        </li>
                                    }
                                }
                            </ul>
                        </div>
                    </div>
                }
                else if (IsGitRepository && !string.IsNullOrEmpty(CurrentBranch))
                {
                    <span class="badge bg-body-tertiary text-body d-flex align-items-center gap-1">
                        <i class="bi bi-git text-danger"></i>
                        @CurrentBranch
                    </span>
                }

                @* Uncommitted Changes Warning Icon *@
                @if (IsGitRepository && _hasUncommittedChangesHeader)
                {
                    <button type="button"
                        class="btn btn-sm btn-outline-warning d-flex align-items-center gap-1 position-relative"
                        @onclick="ShowUncommittedChangesModal" title="Uncommitted changes detected - click to view">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <span class="d-none d-sm-inline">Changes</span>
                        @if (_uncommittedFilesCount > 0)
                        {
                            <span class="badge bg-warning text-dark ms-1">@_uncommittedFilesCount</span>
                        }
                    </button>
                }

                @* Stats Section - Spacer *@
                <div class="flex-grow-1"></div>

                @* Token/Cost Stats (when data exists) *@
                        @if (HasProjectTokenData())
                {
                    <div class="d-flex flex-wrap align-items-center gap-2 gap-md-3">
                        @if (GetProjectTotalInputTokens() > 0 || GetProjectTotalOutputTokens() > 0)
                        {
                            <div class="d-flex align-items-center gap-1 small text-body-secondary"
                                title="Total tokens (input / output)">
                                <i class="bi bi-braces opacity-75"></i>
                                <span>@TokenHelper.FormatTokenCount(GetProjectTotalInputTokens()) /
                                    @TokenHelper.FormatTokenCount(GetProjectTotalOutputTokens())</span>
                            </div>
                        }
                        @if (GetProjectTotalCost() > 0)
                        {
                            <div class="d-flex align-items-center gap-1 small fw-medium text-success" title="Total cost">
                                <i class="bi bi-currency-dollar opacity-75"></i>
                                <span>@TokenHelper.FormatCost(GetProjectTotalCost())</span>
                            </div>
                        }
                    </div>
                }
            </div>

            @* Git Operation Messages *@
                    @if (!string.IsNullOrEmpty(GitOperationMessage))
            {
                <div
                    class="alert @(GitOperationSuccess ? "alert-success" : "alert-danger") mt-3 mb-0 py-2 d-flex align-items-center gap-2">
                    <i class="bi @(GitOperationSuccess ? "bi-check-circle" : "bi-exclamation-triangle")"></i>
                    <span class="flex-grow-1">@GitOperationMessage</span>
                    <button type="button" class="btn-close btn-close-sm" @onclick="ClearGitMessage" aria-label="Close"></button>
                </div>
            }
            @if (!string.IsNullOrEmpty(GitProgressMessage))
            {
                <div class="alert alert-info mt-3 mb-0 py-2 d-flex align-items-center gap-2">
                    <span class="spinner-border spinner-border-sm" role="status"></span>
                    <span>@GitProgressMessage</span>
                </div>
            }
        </div>
    </div>

    <div class="row g-3 g-lg-4">
        @* Create Job form first on mobile *@
                <div class="col-12 col-lg-4 order-1 order-lg-2">
            <div class="card">
                <div class="card-header bg-body-secondary">
                    <h5 class="mb-0 fw-semibold">Create Job</h5>
                </div>
                <div class="card-body">
                    <EditForm Model="@NewJob" OnValidSubmit="HandleCreateJob">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="text-danger mb-3" />

                        <div class="mb-3">
                            <label for="goalPrompt" class="form-label">Goal Prompt</label>
                            <InputTextArea id="goalPrompt" @bind-Value="NewJob.GoalPrompt" class="form-control" rows="4"
                                placeholder="Describe what you want the AI agent to accomplish..." />
                            <ValidationMessage For="@(() => NewJob.GoalPrompt)" class="text-danger small" />
                        </div>

                        <div class="mb-3">
                            <label for="provider" class="form-label">Provider</label>
                            <InputSelect id="provider" Value="NewJob.ProviderId"
                                ValueExpression="@(() => NewJob.ProviderId)"
                                ValueChanged="@((Guid value) => OnProviderChanged(value))" class="form-select">
                                <option value="@Guid.Empty">Select a provider...</option>
                                @foreach (var provider in Providers.Where(p => p.IsEnabled))
                                {
                                    <option value="@provider.Id">@provider.Name (@provider.Type)</option>
                                }
                            </InputSelect>
                            @if (!Providers.Any(p => p.IsEnabled))
                            {
                                <div class="form-text text-warning">
                                    No enabled providers. <a href="/providers">Configure one</a> first.
                                </div>
                            }
                        </div>

                        <div class="mb-3">
                            <label for="model" class="form-label">Model</label>
                            <InputSelect id="model" @bind-Value="SelectedModelId" class="form-select"
                                disabled="@(NewJob.ProviderId == Guid.Empty || IsLoadingModels)">
                                @if (IsLoadingModels)
                                {
                                    <option value="">Loading models...</option>
                                }
                                else if (!AvailableModels.Any())
                                {
                                    <option value="">@(NewJob.ProviderId == Guid.Empty ? "Select a provider first..." : "No                               models available")</option>
                                }
                                else
                                {
                                    <option value="">Use provider default</option>
                                    @foreach (var model in AvailableModels.Where(m => m.IsAvailable))
                                    {
                                        <option value="@model.ModelId">@(model.DisplayName ?? model.ModelId)@(model.IsDefault ? "                              (default)" : "")</option>
                                    }
                                }
                            </InputSelect>
                            <div class="form-text">Leave empty to use the provider's default model.</div>
                        </div>

                        @if (IsGitRepository && Branches.Any())
                        {
                            <div class="mb-3">
                                <label for="branch" class="form-label">Branch</label>
                                <InputSelect id="branch" @bind-Value="NewJob.Branch" class="form-select">
                                    @foreach (var branch in Branches.Where(b => !b.IsRemote).OrderByDescending(b => b.Name ==
                                                                CurrentBranch))
                                    {
                                        <option value="@branch.Name">
                                            @branch.Name @(branch.Name == CurrentBranch ? "(current)" : "")
                                        </option>
                                    }
                                </InputSelect>
                                <div class="form-text">The branch where the AI agent will operate.</div>
                            </div>
                        }

                        <button type="submit" class="btn btn-primary w-100"
                            disabled="@(IsSaving || NewJob.ProviderId == Guid.Empty)">
                            @if (IsSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                            }
                            @(IsSaving ? "Creating..." : "Create Job")
                        </button>

                        @if (!string.IsNullOrEmpty(ErrorMessage))
                        {
                            <div class="alert alert-danger mt-3 mb-0">@ErrorMessage</div>
                        }
                    </EditForm>
                </div>
            </div>
        </div>

        @* Jobs list second on mobile *@
                <div class="col-12 col-lg-8 order-2 order-lg-1">
            <div class="card">
                <div class="card-header bg-body-secondary d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-semibold">Jobs</h5>
                    <span class="badge bg-secondary">@Jobs.Count</span>
                </div>
                <div class="card-body p-0">
                    @if (!Jobs.Any())
                    {
                        <div class="p-3">
                            <EmptyState Icon="list-check" Title="No jobs yet"
                                Message="Create a job to start working on this project." />
                        </div>
                    }
                    else
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var job in Jobs)
                            {
                                <li class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-start gap-2">
                                        <div class="d-flex align-items-start gap-2 flex-grow-1 min-width-0">
                                            @* Status Icon *@
                                                                    <div class="flex-shrink-0 pt-1">
                                                @switch (job.Status)
                                                {
                                                    case JobStatus.Completed:
                                                        <i class="bi bi-check-circle-fill text-success fs-5" title="Completed"></i>
                                                        break;
                                                    case JobStatus.Failed:
                                                    case JobStatus.Cancelled:
                                                        <i class="bi bi-x-circle-fill text-danger fs-5" title="@job.Status.ToString()"></i>
                                                        break;
                                                    case JobStatus.Started:
                                                    case JobStatus.Processing:
                                                        <div class="spinner-border spinner-border-sm text-primary" role="status"
                                                            title="@job.Status.ToString()">
                                                            <span class="visually-hidden">Processing...</span>
                                                        </div>
                                                        break;
                                                    case JobStatus.Pending:
                                                        <i class="bi bi-hourglass-split text-warning fs-5" title="Pending"></i>
                                                        break;
                                                    default:
                                                        <i class="bi bi-circle text-secondary fs-5" title="@job.Status.ToString()"></i>
                                                        break;
                                                }
                                            </div>
                                            @* Job Content *@
                                                                    <div class="flex-grow-1 min-width-0">
                                                <a href="/jobs/@job.Id"
                                                    class="d-block text-decoration-none fw-medium text-truncate-lines-2">
                                                    @job.GoalPrompt
                                                </a>
                                                <div class="d-flex flex-wrap gap-2 mt-1 small text-body-secondary">
                                                    <span>@(job.Provider?.Name ?? "Unknown")</span>
                                                    <span>â€¢</span>
                                                    <span>@job.CreatedAt.FormatDateTimeShort()</span>
                                                </div>
                                                @if ((job.Status == JobStatus.Started || job.Status == JobStatus.Processing) &&
                                                                                    !string.IsNullOrEmpty(job.CurrentActivity))
                                                {
                                                    <div class="job-activity mt-1">@TruncateText(job.CurrentActivity, 80)</div>
                                                }
                                                @if (!string.IsNullOrEmpty(job.ErrorMessage))
                                                {
                                                    <div class="job-error mt-2">@TruncateText(job.ErrorMessage, 100)</div>
                                                }
                                            </div>
                                        </div>
                                        @* Actions Dropdown *@
                                                                <div class="dropdown flex-shrink-0">
                                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button"
                                                data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="bi bi-three-dots-vertical"></i>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end">
                                                <li>
                                                    <a class="dropdown-item" href="/jobs/view/@job.Id">
                                                        <i class="bi bi-eye me-2"></i>View Details
                                                    </a>
                                                </li>
                                                <li>
                                                    <hr class="dropdown-divider">
                                                </li>
                                                <li>
                                                    <button class="dropdown-item text-danger" @onclick="() => DeleteJob(job.Id)">
                                                        <i class="bi bi-trash me-2"></i>Delete
                                                    </button>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(SuccessMessage))
    {
        <div class="alert alert-success mt-3">@SuccessMessage</div>
    }

    @* Create Branch Modal *@
    @if (_showCreateBranchModal)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">
                            <i class="bi bi-git me-2"></i>Create New Branch
                        </h5>
                        <button type="button" class="btn-close" @onclick="CloseCreateBranchModal"
                            disabled="@_isCreatingBranch"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="newBranchName" class="form-label">Branch Name</label>
                            <input type="text" class="form-control" id="newBranchName" @bind="_newBranchName"
                                @bind:event="oninput" placeholder="e.g., feature/new-feature" disabled="@_isCreatingBranch" />
                            <div class="form-text">
                                <i class="bi bi-info-circle me-1"></i>
                                Branch will be created from current branch: <strong>@CurrentBranch</strong>
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(_createBranchError))
                        {
                            <div class="alert alert-danger py-2 mb-0">
                                <i class="bi bi-exclamation-triangle me-1"></i>@_createBranchError
                            </div>
                        }
                        <div class="alert alert-info py-2 mb-0 mt-3">
                            <i class="bi bi-lightbulb me-1"></i>
                            <small>This branch will only be created locally. Use this to isolate Job changes before
                                pushing.</small>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseCreateBranchModal"
                            disabled="@_isCreatingBranch">
                            Cancel
                        </button>
                        <button type="button" class="btn btn-primary" @onclick="CreateBranch"
                            disabled="@(_isCreatingBranch || string.IsNullOrWhiteSpace(_newBranchName))">
                            @if (_isCreatingBranch)
                            {
                                <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                                <span>Creating...</span>
                            }
                            else
                            {
                                <i class="bi bi-plus-lg me-1"></i>
                                <span>Create & Switch</span>
                            }
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }

    @* Branch Switch Confirmation Modal *@
    @if (_showBranchSwitchModal)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title d-flex align-items-center gap-2">
                            <i class="bi bi-arrow-left-right text-primary"></i>
                            Switch Branch
                        </h5>
                        <button type="button" class="btn-close" @onclick="CloseBranchSwitchModal"
                            disabled="@_isSwitchingBranch"></button>
                    </div>
                    <div class="modal-body">
                        @if (_isCheckingUncommittedChanges)
                        {
                            <div class="d-flex align-items-center gap-2 text-body-secondary">
                                <span class="spinner-border spinner-border-sm" role="status"></span>
                                <span>Checking for uncommitted changes...</span>
                            </div>
                        }
                        else
                        {
                            <p class="mb-3">
                                Switch from <strong class="text-primary">@CurrentBranch</strong> to
                                <strong class="text-success">@_targetBranch</strong>?
                            </p>

                            @if (_hasUncommittedChanges)
                            {
                                <div class="alert alert-warning py-2 mb-3 d-flex align-items-start gap-2">
                                    <i class="bi bi-exclamation-triangle-fill mt-1 flex-shrink-0"></i>
                                    <div>
                                        <strong>Uncommitted changes detected!</strong>
                                        <p class="mb-0 mt-1 small">
                                            You have uncommitted changes in your working directory.
                                            These changes may be lost or cause conflicts when switching branches.
                                        </p>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="commitBeforeSwitch"
                                            @bind="_commitBeforeSwitch">
                                        <label class="form-check-label" for="commitBeforeSwitch">
                                            Commit changes before switching
                                        </label>
                                    </div>
                                </div>

                                @if (_commitBeforeSwitch)
                                {
                                    <div class="mb-3">
                                        <label for="commitMessage" class="form-label small fw-medium">Commit Message</label>
                                        <input type="text" class="form-control" id="commitMessage" @bind="_commitMessage"
                                            @bind:event="oninput" placeholder="e.g., WIP: Save changes before branch switch"
                                            disabled="@_isSwitchingBranch" />
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="alert alert-info py-2 mb-0 d-flex align-items-center gap-2">
                                    <i class="bi bi-check-circle"></i>
                                    <span>No uncommitted changes. Safe to switch branches.</span>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(_branchSwitchError))
                            {
                                <div class="alert alert-danger py-2 mt-3 mb-0">
                                    <i class="bi bi-exclamation-triangle me-1"></i>@_branchSwitchError
                                </div>
                            }
                        }
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseBranchSwitchModal"
                            disabled="@_isSwitchingBranch">
                            Cancel
                        </button>
                        <button type="button" class="btn btn-primary" @onclick="ConfirmBranchSwitch"
                            disabled="@(_isSwitchingBranch || _isCheckingUncommittedChanges || (_commitBeforeSwitch && string.IsNullOrWhiteSpace(_commitMessage)))">
                            @if (_isSwitchingBranch)
                            {
                                <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                                <span>Switching...</span>
                            }
                            else if (_commitBeforeSwitch && _hasUncommittedChanges)
                            {
                                <i class="bi bi-check-lg me-1"></i>
                                <span>Commit & Switch</span>
                            }
                            else
                            {
                                <i class="bi bi-arrow-left-right me-1"></i>
                                <span>Switch Branch</span>
                            }
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }

    @* Uncommitted Changes Modal *@
    @if (_showUncommittedChangesModal)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-dialog-centered modal-xl modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title d-flex align-items-center gap-2">
                            <i class="bi bi-exclamation-triangle text-warning"></i>
                            Uncommitted Changes
                            @if (_uncommittedDiffFiles.Any())
                            {
                                <span class="badge bg-secondary">@_uncommittedDiffFiles.Count files</span>
                            }
                        </h5>
                        <button type="button" class="btn-close" @onclick="CloseUncommittedChangesModal"
                            disabled="@(_isCommittingChanges || _isDiscardingChanges)"></button>
                    </div>
