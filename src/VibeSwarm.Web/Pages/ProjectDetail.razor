@page "/projects/{ProjectId:guid}"
@attribute [Authorize]
@inject IProjectService ProjectService
@inject IJobService JobService
@inject IProviderService ProviderService
@inject IVersionControlService VersionControlService
@inject NavigationManager NavigationManager
@implements IDisposable
@using VibeSwarm.Shared.Utilities
@using VibeSwarm.Shared.VersionControl
@using VibeSwarm.Shared.VersionControl.Models

@if (IsLoading)
{
    <LoadingSpinner />
}
else if (Project == null)
{
    <div class="alert alert-warning">
        <p class="mb-0">Project not found.</p>
    </div>
    <a href="/projects" class="btn btn-secondary">Back to Projects</a>
}
else
{
    <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start gap-2 gap-sm-3 mb-3 mb-lg-4">
        <div class="flex-grow-1">
            <div class="d-flex align-items-center gap-2 mb-2">
                <a href="/projects" class="btn btn-sm btn-outline-secondary d-none d-sm-inline-flex">
                    <i class="bi bi-arrow-left me-1"></i>Back
                </a>
                <h3 class="mb-0 fs-4 fw-semibold">@Project.Name</h3>
            </div>
            @if (!string.IsNullOrEmpty(Project.Description))
            {
                <p class="text-body-secondary mb-2">@Project.Description</p>
            }
            <div class="small">
                <code class="d-inline-block text-truncate" style="max-width: 100%;">@Project.WorkingPath</code>
            </div>
        </div>
        <a href="/projects" class="btn btn-secondary d-sm-none mt-2">
            <i class="bi bi-arrow-left me-1"></i>Back
        </a>
    </div>

    @* Git Operations Card *@
    @if (IsGitRepository)
    {
        <div class="card mb-3 mb-lg-4">
            <div class="card-header bg-body-secondary d-flex align-items-center gap-2">
                <i class="bi bi-git text-danger"></i>
                <h5 class="mb-0 fw-semibold">Git Repository</h5>
            </div>
            <div class="card-body">
                <div class="row g-3 align-items-end">
                    <div class="col-12 col-md-6 col-lg-4">
                        <label class="form-label small text-body-secondary mb-1">Current Branch</label>
                        <div class="input-group">
                            <select class="form-select" @bind="SelectedBranch"
                                disabled="@(IsGitOperationInProgress || !Branches.Any())">
                                @if (!Branches.Any())
                                {
                                    <option value="">No branches found</option>
                                }
                                else
                                {
                                    @foreach (var branch in Branches.Where(b => !b.IsRemote))
                                    {
                                        <option value="@branch.Name">@(branch.IsCurrent ? "* " : "")@branch.Name</option>
                                    }
                                    @if (Branches.Any(b => b.IsRemote))
                                    {
                                        <optgroup label="Remote Branches">
                                            @foreach (var branch in Branches.Where(b => b.IsRemote))
                                            {
                                                <option value="@branch.ShortName">@branch.Name</option>
                                            }
                                        </optgroup>
                                    }
                                }
                            </select>
                            <button class="btn btn-outline-secondary" type="button" @onclick="RefreshBranches"
                                disabled="@IsGitOperationInProgress" title="Refresh branches">
                                <i class="bi bi-arrow-clockwise @(IsGitOperationInProgress ? "spin" : "")"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col-12 col-md-6 col-lg-auto">
                        <div class="d-flex flex-wrap gap-2">
                            <button class="btn btn-outline-primary" @onclick="SwitchBranch"
                                disabled="@(IsGitOperationInProgress || string.IsNullOrEmpty(SelectedBranch) || SelectedBranch == CurrentBranch)">
                                @if (IsGitOperationInProgress && _currentGitOperation == "checkout")
                                {
                                    <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                                }
                                <i class="bi bi-box-arrow-in-right me-1"></i>Switch Branch
                            </button>
                            <button class="btn btn-outline-success" @onclick="SyncWithOrigin"
                                disabled="@IsGitOperationInProgress">
                                @if (IsGitOperationInProgress && _currentGitOperation == "sync")
                                {
                                    <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                                }
                                <i class="bi bi-cloud-download me-1"></i>Sync
                            </button>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(CurrentBranch))
                    {
                        <div class="col-12 col-lg-auto ms-lg-auto">
                            <span class="badge bg-primary-subtle text-primary-emphasis">
                                <i class="bi bi-git me-1"></i>@CurrentBranch
                            </span>
                            @if (!string.IsNullOrEmpty(CurrentCommitHash))
                            {
                                <span class="badge bg-secondary-subtle text-secondary-emphasis ms-1 font-monospace">
                                    @CurrentCommitHash[..Math.Min(7, CurrentCommitHash.Length)]
                                </span>
                            }
                        </div>
                    }
                </div>
                @if (!string.IsNullOrEmpty(GitOperationMessage))
                {
                    <div
                        class="alert @(GitOperationSuccess ? "alert-success" : "alert-danger") mt-3 mb-0 d-flex align-items-center gap-2">
                        <i class="bi @(GitOperationSuccess ? "bi-check-circle" : "bi-exclamation-triangle")"></i>
                        <span>@GitOperationMessage</span>
                        <button type="button" class="btn-close ms-auto" @onclick="ClearGitMessage"></button>
                    </div>
                }
                @if (!string.IsNullOrEmpty(GitProgressMessage))
                {
                    <div class="alert alert-info mt-3 mb-0 d-flex align-items-center gap-2">
                        <span class="spinner-border spinner-border-sm" role="status"></span>
                        <span>@GitProgressMessage</span>
                    </div>
                }
            </div>
        </div>
    }

    <div class="row g-3 g-lg-4">
        @* Create Job form first on mobile *@
        <div class="col-12 col-lg-4 order-1 order-lg-2">
            <div class="card">
                <div class="card-header bg-body-secondary">
                    <h5 class="mb-0 fw-semibold">Create Job</h5>
                </div>
                <div class="card-body">
                    <EditForm Model="@NewJob" OnValidSubmit="HandleCreateJob">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="text-danger mb-3" />

                        <div class="mb-3">
                            <label for="goalPrompt" class="form-label">Goal Prompt</label>
                            <InputTextArea id="goalPrompt" @bind-Value="NewJob.GoalPrompt" class="form-control" rows="4"
                                placeholder="Describe what you want the AI agent to accomplish..." />
                            <ValidationMessage For="@(() => NewJob.GoalPrompt)" class="text-danger small" />
                        </div>

                        <div class="mb-3">
                            <label for="provider" class="form-label">Provider</label>
                            <InputSelect id="provider" Value="NewJob.ProviderId"
                                ValueExpression="@(() => NewJob.ProviderId)"
                                ValueChanged="@((Guid value) => OnProviderChanged(value))" class="form-select">
                                <option value="@Guid.Empty">Select a provider...</option>
                                @foreach (var provider in Providers.Where(p => p.IsEnabled))
                                {
                                    <option value="@provider.Id">@provider.Name (@provider.Type)</option>
                                }
                            </InputSelect>
                            @if (!Providers.Any(p => p.IsEnabled))
                            {
                                <div class="form-text text-warning">
                                    No enabled providers. <a href="/providers">Configure one</a> first.
                                </div>
                            }
                        </div>

                        <div class="mb-3">
                            <label for="model" class="form-label">Model</label>
                            <InputSelect id="model" @bind-Value="SelectedModelId" class="form-select"
                                disabled="@(NewJob.ProviderId == Guid.Empty || IsLoadingModels)">
                                @if (IsLoadingModels)
                                {
                                    <option value="">Loading models...</option>
                                }
                                else if (!AvailableModels.Any())
                                {
                                    <option value="">@(NewJob.ProviderId == Guid.Empty ? "Select a provider first..." : "No                               models available")</option>
                                }
                                else
                                {
                                    <option value="">Use provider default</option>
                                    @foreach (var model in AvailableModels.Where(m => m.IsAvailable))
                                    {
                                        <option value="@model.ModelId">@(model.DisplayName ?? model.ModelId)@(model.IsDefault ? "                             (default)" : "")</option>
                                    }
                                }
                            </InputSelect>
                            <div class="form-text">Leave empty to use the provider's default model.</div>
                        </div>

                        <button type="submit" class="btn btn-primary w-100"
                            disabled="@(IsSaving || NewJob.ProviderId == Guid.Empty)">
                            @if (IsSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                            }
                            @(IsSaving ? "Creating..." : "Create Job")
                        </button>

                        @if (!string.IsNullOrEmpty(ErrorMessage))
                        {
                            <div class="alert alert-danger mt-3 mb-0">@ErrorMessage</div>
                        }
                    </EditForm>
                </div>
            </div>
        </div>

        @* Jobs list second on mobile *@
        <div class="col-12 col-lg-8 order-2 order-lg-1">
            <div class="card">
                <div class="card-header bg-body-secondary d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-semibold">Jobs</h5>
                    <span class="badge bg-secondary">@Jobs.Count</span>
                </div>
                <div class="card-body p-0 p-sm-3">
                    @if (!Jobs.Any())
                    {
                        <div class="p-3">
                            <EmptyState Icon="list-check" Title="No jobs yet"
                                Message="Create a job to start working on this project." />
                        </div>
                    }
                    else
                    {
                        @* Token and Cost Summary for this project *@
                        @if (HasProjectTokenData())
                        {
                            <div class="d-flex flex-wrap gap-2 p-3 border-bottom">
                                @if (GetProjectTotalInputTokens() > 0)
                                {
                                    <StatItem Label="Total Input" Value="@TokenHelper.FormatTokenCount(GetProjectTotalInputTokens())" />
                                }
                                @if (GetProjectTotalOutputTokens() > 0)
                                {
                                    <StatItem Label="Total Output"
                                        Value="@TokenHelper.FormatTokenCount(GetProjectTotalOutputTokens())" />
                                }
                                @if (GetProjectTotalInputTokens() > 0 || GetProjectTotalOutputTokens() > 0)
                                {
                                    <StatItem Label="Total Tokens"
                                        Value="@TokenHelper.FormatTokenCount(GetProjectTotalInputTokens() + GetProjectTotalOutputTokens())" />
                                }
                                @if (GetProjectTotalCost() > 0)
                                {
                                    <StatItem Label="Total Cost" Value="@TokenHelper.FormatCost(GetProjectTotalCost())" />
                                }
                            </div>
                        }

                        @* Mobile: Card layout *@
                        <div class="d-lg-none">
                            @foreach (var job in Jobs)
                            {
                                <div class="p-3 border-bottom">
                                    <div class="d-flex justify-content-between align-items-start gap-2 mb-2">
                                        <div class="d-flex align-items-center gap-2 flex-wrap">
                                            <StatusBadge Status="@job.Status.ToString()" />
                                            <span class="small text-body-secondary">@(job.Provider?.Name ?? "Unknown")</span>
                                        </div>
                                        <div class="btn-group btn-group-sm">
                                            <a href="/jobs/@job.Id" class="btn btn-outline-secondary">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <button class="btn btn-outline-danger" @onclick="() => DeleteJob(job.Id)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <a href="/jobs/@job.Id" class="d-block mb-2 text-decoration-none">@TruncateText(job.GoalPrompt,
                                                                    80)</a>
                        @if ((job.Status == JobStatus.Started || job.Status == JobStatus.Processing) &&
                                                !string.IsNullOrEmpty(job.CurrentActivity))
                                    {
                                        <div class="job-activity">@job.CurrentActivity</div>
                                    }
                                    <div class="small text-body-secondary">@job.CreatedAt.FormatDateTimeShort()</div>
                                    @if (!string.IsNullOrEmpty(job.ErrorMessage))
                                    {
                                        <div class="job-error mt-2">@TruncateText(job.ErrorMessage, 100)</div>
                                    }
                                </div>
                            }
                        </div>

                        @* Desktop: Table layout *@
                        <div class="table-responsive d-none d-lg-block">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Goal</th>
                                        <th>Provider</th>
                                        <th>Status</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var job in Jobs)
                                    {
                                        <tr>
                                            <td>
                                                <a href="/jobs/@job.Id" class="text-decoration-none">@TruncateText(job.GoalPrompt,
                                                                                            80)</a>
                                </td>
                                <td>@(job.Provider?.Name ?? "Unknown")</td>
                                <td>
                                    <StatusBadge Status="@job.Status.ToString()" />
                                    @if ((job.Status == JobStatus.Started || job.Status == JobStatus.Processing) &&
                                                                        !string.IsNullOrEmpty(job.CurrentActivity))
                                                {
                                                    <div class="job-activity">@TruncateText(job.CurrentActivity, 30)</div>
                                                }
                                            </td>
                                            <td>@job.CreatedAt.FormatDateTimeShort()</td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a href="/jobs/@job.Id" class="btn btn-outline-secondary">View</a>
                                                    <button class="btn btn-outline-danger"
                                                        @onclick="() => DeleteJob(job.Id)">Delete</button>
                                                </div>
                                            </td>
                                        </tr>
                                        @if (!string.IsNullOrEmpty(job.ErrorMessage))
                                        {
                                            <tr class="bg-danger bg-opacity-10">
                                                <td colspan="5">
                                                    <div class="job-error">@job.ErrorMessage</div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(SuccessMessage))
    {
        <div class="alert alert-success mt-3">@SuccessMessage</div>
    }
}

@code {
    [Parameter]
    public Guid ProjectId { get; set; }

    private Project? Project { get; set; }
    private List<Job> Jobs { get; set; } = new();
    private List<Provider> Providers { get; set; } = new();
    private Job NewJob { get; set; } = new();
    private bool IsLoading { get; set; } = true;
    private bool IsSaving { get; set; }
    private string? ErrorMessage { get; set; }
    private string? SuccessMessage { get; set; }
    private System.Threading.Timer? _refreshTimer;

    // Model selection
    private List<ProviderModel> AvailableModels { get; set; } = new();
    private string SelectedModelId { get; set; } = string.Empty;
    private bool IsLoadingModels { get; set; }

    // Git-related properties
    private bool IsGitRepository { get; set; }
    private List<GitBranchInfo> Branches { get; set; } = new();
    private string? CurrentBranch { get; set; }
    private string? CurrentCommitHash { get; set; }
    private string? SelectedBranch { get; set; }
    private bool IsGitOperationInProgress { get; set; }
    private string? GitOperationMessage { get; set; }
    private bool GitOperationSuccess { get; set; }
    private string? GitProgressMessage { get; set; }
    private string? _currentGitOperation;

    private bool HasActiveJobs => Jobs.Any(j =>
    j.Status == JobStatus.New ||
    j.Status == JobStatus.Pending ||
    j.Status == JobStatus.Started ||
    j.Status == JobStatus.Processing);

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
        await LoadGitInfo();
        StartAutoRefresh();
    }

    private void StartAutoRefresh()
    {
        _refreshTimer = new System.Threading.Timer(async _ =>
        {
            if (HasActiveJobs)
            {
                await InvokeAsync(async () =>
        {
            await RefreshJobs();
            StateHasChanged();
        });
            }
        }, null, TimeSpan.FromSeconds(3), TimeSpan.FromSeconds(3));
    }

    private async Task RefreshJobs()
    {
        if (Project != null)
        {
            Jobs = (await JobService.GetByProjectIdAsync(ProjectId)).ToList();
        }
    }

    private async Task LoadData()
    {
        IsLoading = true;
        try
        {
            Project = await ProjectService.GetByIdAsync(ProjectId);
            if (Project != null)
            {
                Jobs = (await JobService.GetByProjectIdAsync(ProjectId)).ToList();
            }
            Providers = (await ProviderService.GetAllAsync()).ToList();

            // Pre-select the default provider for new jobs
            var defaultProvider = await ProviderService.GetDefaultAsync();
            if (defaultProvider != null)
            {
                NewJob.ProviderId = defaultProvider.Id;
                // Load models for the default provider
                await LoadModelsForProvider(defaultProvider.Id);
            }
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task LoadGitInfo()
    {
        if (Project == null || string.IsNullOrEmpty(Project.WorkingPath))
            return;

        try
        {
            IsGitRepository = await VersionControlService.IsGitRepositoryAsync(Project.WorkingPath);
            if (IsGitRepository)
            {
                CurrentBranch = await VersionControlService.GetCurrentBranchAsync(Project.WorkingPath);
                CurrentCommitHash = await VersionControlService.GetCurrentCommitHashAsync(Project.WorkingPath);
                SelectedBranch = CurrentBranch;
                await LoadBranches();
            }
        }
        catch
        {
            IsGitRepository = false;
        }
    }

    private async Task LoadBranches()
    {
        if (Project == null || string.IsNullOrEmpty(Project.WorkingPath))
            return;

        try
        {
            Branches = (await VersionControlService.GetBranchesAsync(Project.WorkingPath, includeRemote: true)).ToList();
        }
        catch
        {
            Branches = new List<GitBranchInfo>();
        }
    }

    private async Task RefreshBranches()
    {
        if (IsGitOperationInProgress)
            return;

        IsGitOperationInProgress = true;
        _currentGitOperation = "refresh";
        GitProgressMessage = "Fetching latest branches...";
        StateHasChanged();

        try
        {
            if (Project != null && !string.IsNullOrEmpty(Project.WorkingPath))
            {
                // Fetch first to get latest remote branches
                await VersionControlService.FetchAsync(Project.WorkingPath);
                await LoadBranches();
                CurrentBranch = await VersionControlService.GetCurrentBranchAsync(Project.WorkingPath);
                CurrentCommitHash = await VersionControlService.GetCurrentCommitHashAsync(Project.WorkingPath);
            }
        }
        catch (Exception ex)
        {
            GitOperationMessage = $"Failed to refresh branches: {ex.Message}";
            GitOperationSuccess = false;
        }
        finally
        {
            IsGitOperationInProgress = false;
            GitProgressMessage = null;
            _currentGitOperation = null;
            StateHasChanged();
        }
    }

    private async Task SwitchBranch()
    {
        if (IsGitOperationInProgress || string.IsNullOrEmpty(SelectedBranch) || SelectedBranch == CurrentBranch)
            return;

        if (Project == null || string.IsNullOrEmpty(Project.WorkingPath))
            return;

        IsGitOperationInProgress = true;
        _currentGitOperation = "checkout";
        GitOperationMessage = null;
        StateHasChanged();

        try
        {
            var result = await VersionControlService.HardCheckoutBranchAsync(
            Project.WorkingPath,
            SelectedBranch,
            progressCallback: progress =>
            {
                GitProgressMessage = progress;
                InvokeAsync(StateHasChanged);
            });

            if (result.Success)
            {
                GitOperationMessage = $"Successfully switched to branch '{SelectedBranch}'";
                GitOperationSuccess = true;
                CurrentBranch = SelectedBranch;
                CurrentCommitHash = result.CommitHash;
                await LoadBranches();
            }
            else
            {
                GitOperationMessage = result.Error ?? "Failed to switch branch";
                GitOperationSuccess = false;
                SelectedBranch = CurrentBranch; // Reset selection
            }
        }
        catch (Exception ex)
        {
            GitOperationMessage = $"Error switching branch: {ex.Message}";
            GitOperationSuccess = false;
            SelectedBranch = CurrentBranch; // Reset selection
        }
        finally
        {
            IsGitOperationInProgress = false;
            GitProgressMessage = null;
            _currentGitOperation = null;
            StateHasChanged();
        }
    }

    private async Task SyncWithOrigin()
    {
        if (IsGitOperationInProgress)
            return;

        if (Project == null || string.IsNullOrEmpty(Project.WorkingPath))
            return;

        IsGitOperationInProgress = true;
        _currentGitOperation = "sync";
        GitOperationMessage = null;
        StateHasChanged();

        try
        {
            var result = await VersionControlService.SyncWithOriginAsync(
            Project.WorkingPath,
            progressCallback: progress =>
            {
                GitProgressMessage = progress;
                InvokeAsync(StateHasChanged);
            });

            if (result.Success)
            {
                GitOperationMessage = $"Successfully synced with origin/{CurrentBranch}";
                GitOperationSuccess = true;
                CurrentCommitHash = result.CommitHash;

                // Populate GitHubRepository if it's not already set
                await PopulateGitHubRepositoryIfMissing();
            }
            else
            {
                GitOperationMessage = result.Error ?? "Failed to sync with origin";
                GitOperationSuccess = false;
            }
        }
        catch (Exception ex)
        {
            GitOperationMessage = $"Error syncing with origin: {ex.Message}";
            GitOperationSuccess = false;
        }
        finally
        {
            IsGitOperationInProgress = false;
            GitProgressMessage = null;
            _currentGitOperation = null;
            StateHasChanged();
        }
    }

    private async Task PopulateGitHubRepositoryIfMissing()
    {
        if (Project == null || string.IsNullOrEmpty(Project.WorkingPath))
            return;

        // Skip if GitHubRepository is already populated
        if (!string.IsNullOrWhiteSpace(Project.GitHubRepository))
            return;

        try
        {
            // Get the remote URL from the repository
            var remoteUrl = await VersionControlService.GetRemoteUrlAsync(Project.WorkingPath);
            if (string.IsNullOrWhiteSpace(remoteUrl))
                return;

            // Extract the GitHub repository from the remote URL
            var gitHubRepo = VersionControlService.ExtractGitHubRepository(remoteUrl);
            if (string.IsNullOrWhiteSpace(gitHubRepo))
                return;

            // Update the project with the GitHubRepository
            Project.GitHubRepository = gitHubRepo;
            await ProjectService.UpdateAsync(Project);
        }
        catch
        {
            // Silently ignore errors - this is a best-effort enhancement
        }
    }

    private void ClearGitMessage()
    {
        GitOperationMessage = null;
        StateHasChanged();
    }

    private async Task OnProviderChanged(Guid providerId)
    {
        NewJob.ProviderId = providerId;
        SelectedModelId = string.Empty;
        AvailableModels.Clear();

        if (providerId != Guid.Empty)
        {
            await LoadModelsForProvider(providerId);
        }
    }

    private async Task LoadModelsForProvider(Guid providerId)
    {
        IsLoadingModels = true;
        try
        {
            AvailableModels = (await ProviderService.GetModelsAsync(providerId)).ToList();

            // Try to default to the last used model for this project/provider combination
            var lastUsedModel = await JobService.GetLastUsedModelAsync(ProjectId, providerId);
            if (!string.IsNullOrEmpty(lastUsedModel) && AvailableModels.Any(m => m.ModelId == lastUsedModel))
            {
                SelectedModelId = lastUsedModel;
            }
            else
            {
                // Fall back to default model or empty (use provider default)
                var defaultModel = AvailableModels.FirstOrDefault(m => m.IsDefault && m.IsAvailable);
                SelectedModelId = defaultModel?.ModelId ?? string.Empty;
            }
        }
        finally
        {
            IsLoadingModels = false;
        }
    }

    private async Task HandleCreateJob()
    {
        if (NewJob.ProviderId == Guid.Empty)
        {
            ErrorMessage = "Please select a provider.";
            return;
        }

        IsSaving = true;
        ErrorMessage = null;
        SuccessMessage = null;

        try
        {
            NewJob.ProjectId = ProjectId;
            // Set the selected model if one was chosen
            NewJob.ModelUsed = string.IsNullOrEmpty(SelectedModelId) ? null : SelectedModelId;
            var createdJob = await JobService.CreateAsync(NewJob);

            // Redirect to the job details page to watch progress in real-time
            NavigationManager.NavigateTo($"/jobs/{createdJob.Id}");
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error creating job: {ex.Message}";
            IsSaving = false;
        }
    }

    private async Task DeleteJob(Guid jobId)
    {
        try
        {
            await JobService.DeleteAsync(jobId);
            Jobs = (await JobService.GetByProjectIdAsync(ProjectId)).ToList();
            SuccessMessage = "Job deleted successfully.";
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error deleting job: {ex.Message}";
        }
    }

    private static string TruncateText(string text, int maxLength)
    {
        if (string.IsNullOrEmpty(text) || text.Length <= maxLength)
            return text;
        return text[..maxLength] + "...";
    }

    // Token and cost summary methods for project jobs
    private int GetProjectTotalInputTokens() => Jobs.Sum(j => j.InputTokens ?? 0);
    private int GetProjectTotalOutputTokens() => Jobs.Sum(j => j.OutputTokens ?? 0);
    private decimal GetProjectTotalCost() => Jobs.Sum(j => j.TotalCostUsd ?? 0);
    private bool HasProjectTokenData() => GetProjectTotalInputTokens() > 0 || GetProjectTotalOutputTokens() > 0 ||
