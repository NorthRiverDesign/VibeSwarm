@page "/projects/{ProjectId:guid}"
@attribute [Authorize]
@inject IProjectService ProjectService
@inject IJobService JobService
@inject IProviderService ProviderService
@inject NavigationManager NavigationManager
@implements IDisposable
@using VibeSwarm.Shared.Utilities

@if (IsLoading)
{
    <div class="d-flex justify-content-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (Project == null)
{
    <div class="alert alert-warning">
        <p class="mb-0">Project not found.</p>
    </div>
    <a href="/projects" class="btn btn-secondary">Back to Projects</a>
}
else
{
    <div class="d-flex justify-content-between align-items-start mb-4">
        <div>
            <h3 class="mb-2">@Project.Name</h3>
            @if (!string.IsNullOrEmpty(Project.Description))
            {
                <p class="text-muted mb-2">@Project.Description</p>
            }
            <p class="mb-0"><strong>Working Path:</strong> <code>@Project.WorkingPath</code></p>
        </div>
        <a href="/projects" class="btn btn-secondary">Back to Projects</a>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">Jobs</h5>
                </div>
                <div class="card-body">
                    @if (!Jobs.Any())
                    {
                        <div class="empty-state">
                            <p class="mb-0">No jobs yet. Create a job to start working on this project.</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Goal</th>
                                        <th>Provider</th>
                                        <th>Status</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var job in Jobs)
                                    {
                                        <tr>
                                            <td class="goal-cell">
                                                <a href="/jobs/@job.Id">@TruncateText(job.GoalPrompt, 100)</a>
                                            </td>
                                            <td>@(job.Provider?.Name ?? "Unknown")</td>
                                            <td>
                                                <span class="badge status-@job.Status.ToString().ToLower()">
                                                    @if (job.Status == JobStatus.Started || job.Status == JobStatus.Processing)
                                                    {
                                                        <span class="status-spinner"></span>
                                                    }
                                                    @job.Status
                                                </span>
                                                @if ((job.Status == JobStatus.Started || job.Status == JobStatus.Processing) &&
                                                                                    !string.IsNullOrEmpty(job.CurrentActivity))
                                                {
                                                    <div class="job-activity">@job.CurrentActivity</div>
                                                }
                                            </td>
                                            <td>@job.CreatedAt.FormatDateTimeShort()</td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a href="/jobs/@job.Id" class="btn btn-outline-secondary">View</a>
                                                    <button class="btn btn-outline-danger"
                                                        @onclick="() => DeleteJob(job.Id)">Delete</button>
                                                </div>
                                            </td>
                                        </tr>
                                        @if (!string.IsNullOrEmpty(job.ErrorMessage))
                                        {
                                            <tr class="error-row">
                                                <td colspan="5">
                                                    <div class="job-error">@job.ErrorMessage</div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">Create New Job</h5>
                </div>
                <div class="card-body">
                    <EditForm Model="@NewJob" OnValidSubmit="HandleCreateJob">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="text-danger mb-3" />

                        <div class="mb-3">
                            <label for="goalPrompt" class="form-label">Goal Prompt</label>
                            <InputTextArea id="goalPrompt" @bind-Value="NewJob.GoalPrompt" class="form-control" rows="5"
                                placeholder="Describe what you want the AI agent to accomplish..." />
                            <ValidationMessage For="@(() => NewJob.GoalPrompt)" class="text-danger small" />
                        </div>

                        <div class="mb-3">
                            <label for="provider" class="form-label">Provider</label>
                            <InputSelect id="provider" @bind-Value="NewJob.ProviderId" class="form-select">
                                <option value="@Guid.Empty">Select a provider...</option>
                                @foreach (var provider in Providers.Where(p => p.IsEnabled))
                                {
                                    <option value="@provider.Id">@provider.Name (@provider.Type - @provider.ConnectionMode)
                                    </option>
                                }
                            </InputSelect>
                            @if (!Providers.Any(p => p.IsEnabled))
                            {
                                <div class="form-text text-warning">
                                    No enabled providers available. <a href="/providers">Configure a provider</a> first.
                                </div>
                            }
                        </div>

                        <button type="submit" class="btn btn-primary w-100"
                            disabled="@(IsSaving || NewJob.ProviderId == Guid.Empty)">
                            @if (IsSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                            }
                            @(IsSaving ? "Creating..." : "Create Job")
                        </button>

                        @if (!string.IsNullOrEmpty(ErrorMessage))
                        {
                            <div class="alert alert-danger mt-3 mb-0">@ErrorMessage</div>
                        }

                        @if (!string.IsNullOrEmpty(SuccessMessage))
                        {
                            <div class="alert alert-success mt-3 mb-0">@SuccessMessage</div>
                        }
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public Guid ProjectId { get; set; }

    private Project? Project { get; set; }
    private List<Job> Jobs { get; set; } = new();
    private List<Provider> Providers { get; set; } = new();
    private Job NewJob { get; set; } = new();
    private bool IsLoading { get; set; } = true;
    private bool IsSaving { get; set; }
    private string? ErrorMessage { get; set; }
    private string? SuccessMessage { get; set; }
    private System.Threading.Timer? _refreshTimer;

    private bool HasActiveJobs => Jobs.Any(j =>
    j.Status == JobStatus.New ||
    j.Status == JobStatus.Pending ||
    j.Status == JobStatus.Started ||
    j.Status == JobStatus.Processing);

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
        StartAutoRefresh();
    }

    private void StartAutoRefresh()
    {
        _refreshTimer = new System.Threading.Timer(async _ =>
        {
            if (HasActiveJobs)
            {
                await InvokeAsync(async () =>
        {
            await RefreshJobs();
            StateHasChanged();
        });
            }
        }, null, TimeSpan.FromSeconds(3), TimeSpan.FromSeconds(3));
    }

    private async Task RefreshJobs()
    {
        if (Project != null)
        {
            Jobs = (await JobService.GetByProjectIdAsync(ProjectId)).ToList();
        }
    }

    private async Task LoadData()
    {
        IsLoading = true;
        try
        {
            Project = await ProjectService.GetByIdAsync(ProjectId);
            if (Project != null)
            {
                Jobs = (await JobService.GetByProjectIdAsync(ProjectId)).ToList();
            }
            Providers = (await ProviderService.GetAllAsync()).ToList();

            // Pre-select the default provider for new jobs
            var defaultProvider = await ProviderService.GetDefaultAsync();
            if (defaultProvider != null)
            {
                NewJob.ProviderId = defaultProvider.Id;
            }
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task HandleCreateJob()
    {
        if (NewJob.ProviderId == Guid.Empty)
        {
            ErrorMessage = "Please select a provider.";
            return;
        }

        IsSaving = true;
        ErrorMessage = null;
        SuccessMessage = null;

        try
        {
            NewJob.ProjectId = ProjectId;
            var createdJob = await JobService.CreateAsync(NewJob);

            // Redirect to the job details page to watch progress in real-time
            NavigationManager.NavigateTo($"/jobs/{createdJob.Id}");
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error creating job: {ex.Message}";
            IsSaving = false;
        }
    }

    private async Task DeleteJob(Guid jobId)
    {
        try
        {
            await JobService.DeleteAsync(jobId);
            Jobs = (await JobService.GetByProjectIdAsync(ProjectId)).ToList();
            SuccessMessage = "Job deleted successfully.";
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error deleting job: {ex.Message}";
        }
    }

    private static string TruncateText(string text, int maxLength)
    {
        if (string.IsNullOrEmpty(text) || text.Length <= maxLength)
            return text;
        return text[..maxLength] + "...";
    }

    public void Dispose()
    {
        _refreshTimer?.Dispose();
    }
}