@* Reusable page header component with title, subtitle, and actions *@

<div class="d-flex flex-row justify-content-between align-items-start gap-2 gap-sm-3 mb-3 mb-lg-4">
	<div>
		<h3 class="mb-0 fs-4 fw-semibold">@Title</h3>
		@if (!string.IsNullOrEmpty(Subtitle))
		{
			<p class="text-body-secondary mb-0 d-none d-sm-block small">@Subtitle</p>
		}
	</div>
	@if (Actions != null)
	{
		<div class="d-flex flex-wrap gap-2 flex-shrink-0">
			@Actions
		</div>
	}
</div>

@code {
	[Parameter]
	public string Title { get; set; } = string.Empty;

	[Parameter]
	public string? Subtitle { get; set; }

	[Parameter]
	public RenderFragment? Actions { get; set; }
}