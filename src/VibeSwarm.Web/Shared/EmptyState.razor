@* Reusable empty state component for consistent empty UI across pages *@

<div class="d-flex flex-column align-items-center justify-content-center py-4 px-3 text-center bg-body-tertiary rounded-3"
    style="min-height: 200px">
    @if (!string.IsNullOrEmpty(Icon))
    {
        <div class="fs-1 text-body-tertiary mb-3 opacity-50">
            <i class="bi bi-@Icon"></i>
        </div>
    }
    <div style="max-width: 320px">
        <h5 class="fs-5 fw-semibold mb-2">@Title</h5>
        @if (!string.IsNullOrEmpty(Message))
        {
            <p class="small text-secondary mb-3 lh-base">@Message</p>
        }
        @if (ChildContent != null)
        {
            <div class="d-flex flex-wrap gap-2 justify-content-center">
                @ChildContent
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public string Icon { get; set; } = "inbox";

    [Parameter]
    public string Title { get; set; } = "Nothing here yet";

    [Parameter]
    public string? Message { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}