@* User interaction panel for CLI agent input requests *@

<div class="card mb-3 mb-lg-4 border-warning">
	<div class="card-header bg-warning bg-opacity-25 d-flex align-items-center">
		<i class="bi bi-chat-left-text me-2 text-warning fs-5"></i>
		<strong class="text-warning">User Input Required</strong>
	</div>
	<div class="card-body">
		<div class="mb-3">
			<p class="mb-2 text-body-secondary small">The CLI agent is asking:</p>
			<pre class="interaction-prompt bg-body-secondary p-3 rounded mb-0 text-break overflow-auto">@Prompt</pre>
		</div>

		@if (Choices != null && Choices.Count > 0)
		{
			<div class="mb-3">
				<label class="form-label small text-body-secondary">Choose an option:</label>
				<div class="d-flex flex-wrap gap-2">
					@foreach (var choice in Choices)
					{
						<button type="button" class="btn btn-primary" @onclick="() => OnSubmitChoice.InvokeAsync(choice)"
								disabled="@IsSubmitting">
							@choice
						</button>
					}
				</div>
			</div>
		}

		<div class="mb-3">
			<label for="interactionResponse" class="form-label small text-body-secondary">
				Or enter your response:
			</label>
			<div class="input-group">
				<input type="text" id="interactionResponse" class="form-control" @bind="Response" @bind:event="oninput"
					   @onkeyup="HandleKeyPress" placeholder="Type your response..." disabled="@IsSubmitting" />
				<button class="btn btn-primary" type="button" @onclick="SubmitTypedResponse"
						disabled="@(IsSubmitting || string.IsNullOrWhiteSpace(Response))">
					@if (IsSubmitting)
					{
						<span class="spinner-border spinner-border-sm me-1" role="status"></span>
						<span>Sending...</span>
					}
					else
					{
						<i class="bi bi-send me-1"></i>
						<span>Send</span>
					}
				</button>
			</div>
		</div>

		@if (!string.IsNullOrEmpty(ErrorMessage))
		{
			<div class="alert alert-danger py-2 mb-0">
				<i class="bi bi-exclamation-triangle me-1"></i>@ErrorMessage
			</div>
		}

		@if (RequestedAt.HasValue)
		{
			<p class="text-body-secondary small mb-0 mt-2">
				<i class="bi bi-clock me-1"></i>
				Waiting since @RequestedAt.Value.FormatDateTimeShort()
			</p>
		}
	</div>
</div>

@code {
	[Parameter, EditorRequired]
	public string Prompt { get; set; } = string.Empty;

	[Parameter]
	public List<string>? Choices { get; set; }

	[Parameter]
	public bool IsSubmitting { get; set; }

	[Parameter]
	public string? ErrorMessage { get; set; }

	[Parameter]
	public DateTime? RequestedAt { get; set; }

	[Parameter]
	public EventCallback<string> OnSubmitChoice { get; set; }

	[Parameter]
	public EventCallback<string> OnSubmitResponse { get; set; }

	private string Response { get; set; } = string.Empty;

	private async Task HandleKeyPress(KeyboardEventArgs e)
	{
		if (e.Key == "Enter" && !IsSubmitting && !string.IsNullOrWhiteSpace(Response))
		{
			await SubmitTypedResponse();
		}
	}

	private async Task SubmitTypedResponse()
	{
		if (string.IsNullOrWhiteSpace(Response))
			return;

		await OnSubmitResponse.InvokeAsync(Response);
		Response = string.Empty;
	}
}